@using QuizSystemModel.Models
@model IEnumerable<Class>

@{
    ViewData["Title"] = "Pending Class Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pending Class Approvals</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!Model.Any())
{
    <p>No pending classes.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Class Name</th>
                <th>Created At</th>
                <th>Approved</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cls in Model)
            {
                <tr>
                    <td>@cls.Name</td>
                    <td>@cls.CreatedAt.ToLocalTime()</td>
                    <td>@(cls.IsApproved ? "Yes" : "No")</td>
                    <td class="d-flex gap-2">
                        <form asp-controller="Class"
                              asp-action="Approve"
                              method="post" class="me-1">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@cls.Id" />
                            <button type="submit" class="btn btn-success btn-sm">
                                Approve
                            </button>
                        </form>

                        <form asp-controller="Class"
                              asp-action="Reject"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@cls.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Reject
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="AdminDashboard"
   asp-action="Dashboard"
   class="btn btn-secondary">
    Back to Dashboard
</a>
