@model QuizSystemModel.Models.Class

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Class Details";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-graduation-cap me-2"></i>Class Details</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted fw-bold">Class Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Education Medium</dt>
                        <dd class="col-sm-9">@Model.EducationMedium?.Name</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Approved</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-warning"><i class="fas fa-clock me-1"></i>Pending</span>
                            }
                        </dd>

                        <dt class="col-sm-3 text-muted fw-bold">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == QuizSystemModel.BusinessRules.ModelStatus.Active ? "bg-success" : "bg-warning") p-2 px-3">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 shadow-sm">
                    <i class="fas fa-edit me-1"></i> Edit Class
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
