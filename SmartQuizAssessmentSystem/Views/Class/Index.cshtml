@model IEnumerable<QuizSystemModel.Models.Class>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Classes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Classes</h4>
    <div class="d-flex gap-2">
        <a asp-action="Pending" class="btn btn-warning btn-sm">Pending Approvals</a>
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New Class</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Education Medium</th>
            <th>Created At</th>
            <th>Approve Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.EducationMedium?.Name</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>
                    @if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.Active)
                    {
                        <span class="badge bg-success text-white">Approved</span>
                    }
                    else if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                    {
                        <span class="badge bg-danger text-white">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>
                <td>
                    <a asp-controller="Student" asp-action="Index" asp-route-classId="@item.Id" class="btn btn-sm btn-outline-dark">View Students</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>

                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                    </form>

                    <form asp-action="Reject" asp-route-id="@item.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-warning">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
