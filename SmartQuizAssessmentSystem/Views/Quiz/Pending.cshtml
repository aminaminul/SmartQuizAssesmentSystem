@using QuizSystemModel.Models
@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Pending Quiz Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Pending Quiz Approvals</h4>
        <a asp-controller="AdminDashboard" asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
                <p class="text-muted mb-0">No pending quiz approvals found.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Quiz Name</th>
                            <th>Subject</th>
                            <th>Created At</th>
                            <th>Total Marks</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var quiz in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@quiz.Name</div>
                                </td>
                                <td>@(quiz.Subject != null ? quiz.Subject.Name : "-")</td>
                                <td>@quiz.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td>@quiz.TotalMarks</td>
                                <td>
                                    @if (quiz.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (quiz.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2">
                                        <form asp-controller="Quiz" asp-action="Approve" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@quiz.Id" />
                                            <input type="hidden" name="redirect" value="Pending" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i> Approve
                                            </button>
                                        </form>
                                        <form asp-controller="Quiz" asp-action="Reject" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@quiz.Id" />
                                            <input type="hidden" name="redirect" value="Pending" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-times me-1"></i> Reject
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
