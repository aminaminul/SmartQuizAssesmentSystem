@using QuizSystemModel.Models
@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Pending Quiz Approvals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pending Quiz Approvals</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (!Model.Any())
{
    <p>No pending quizzes.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Subject</th>
                <th>Created At</th>
                <th>Total Marks</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model)
            {
                <tr>
                    <td>@quiz.Name</td>
                    <td>@quiz.Subject</td>
                    <td>@quiz.CreatedAt.ToLocalTime()</td>
                    <td>@quiz.TotalMarks</td>
                    <td>
                        @if (quiz.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else if (quiz.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex gap-2">
                            <form asp-controller="Quiz" asp-action="Approve" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@quiz.Id" />
                                <input type="hidden" name="redirect" value="Pending" />
                                <button type="submit" class="btn btn-success btn-sm">Approve</button>
                            </form>
                            <form asp-controller="Quiz" asp-action="Reject" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@quiz.Id" />
                                <input type="hidden" name="redirect" value="Pending" />
                                <button type="submit" class="btn btn-outline-danger btn-sm">Reject</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-controller="AdminDashboard"
   asp-action="Dashboard"
   class="btn btn-secondary">
    Back to Dashboard
</a>
