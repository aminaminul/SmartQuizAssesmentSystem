@model QuizSystemModel.Models.Quiz

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quiz Details";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-tasks me-2"></i>Quiz Details</h5>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted fw-bold">Quiz Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Subject</dt>
                        <dd class="col-sm-9">@Model.Subject?.Name</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Total Marks</dt>
                        <dd class="col-sm-9">@Model.TotalMarks</dd>
                        
                        <dt class="col-sm-3 text-muted fw-bold">Duration</dt>
                        <dd class="col-sm-9">@(Model.Duration.HasValue ? $"{Model.Duration.Value.TotalMinutes} Minutes" : "Not Set")</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Created At</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("g")</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == QuizSystemModel.BusinessRules.ModelStatus.Active ? "bg-success" : "bg-warning") p-2 px-3">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary px-4 shadow-sm">
                    <i class="fas fa-edit me-1"></i> Edit Quiz
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>
