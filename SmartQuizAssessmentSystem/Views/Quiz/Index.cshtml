@model IEnumerable<QuizSystemModel.Models.Quiz>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quizzes";
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Quizzes</h4>
    <div class="d-flex gap-2">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Pending" class="btn btn-warning btn-sm">Pending Approvals</a>
        }
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New Quiz</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label for="educationMediumId" class="form-label">Education Medium</label>
                <select name="educationMediumId" id="educationMediumId" class="form-select" asp-items="ViewBag.EducationMediumId">
                    <option value="">All Mediums</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="classId" class="form-label">Class</label>
                <select name="classId" id="classId" class="form-select" asp-items="ViewBag.ClassId">
                    <option value="">All Classes</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="subjectId" class="form-label">Subject</label>
                <select name="subjectId" id="subjectId" class="form-select" asp-items="ViewBag.SubjectId">
                    <option value="">All Subjects</option>
                </select>
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-secondary">Filter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var mediumDropdown = $('#educationMediumId');
            var classDropdown = $('#classId');
            var subjectDropdown = $('#subjectId');

            mediumDropdown.change(function () {
                var mediumId = $(this).val();
                classDropdown.empty();
                classDropdown.append('<option value="">All Classes</option>');
                subjectDropdown.empty();
                subjectDropdown.append('<option value="">All Subjects</option>');

                if (mediumId) {
                    $.ajax({
                        url: '@Url.Action("GetClasses", "Quiz")',
                        type: 'GET',
                        data: { mediumId: mediumId },
                        success: function (data) {
                            $.each(data, function (i, item) {
                                classDropdown.append($('<option>', {
                                    value: item.id,
                                    text: item.name
                                }));
                            });
                        }
                    });
                }
            });

            classDropdown.change(function () {
                var classId = $(this).val();
                subjectDropdown.empty();
                subjectDropdown.append('<option value="">All Subjects</option>');

                if (classId) {
                    $.ajax({
                        url: '@Url.Action("GetSubjects", "Quiz")',
                        type: 'GET',
                        data: { classId: classId },
                        success: function (data) {
                            $.each(data, function (i, item) {
                                subjectDropdown.append($('<option>', {
                                    value: item.id,
                                    text: item.name
                                }));
                            });
                        }
                    });
                }
            });
        });
    </script>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Subject</th>
            <th>Total Marks</th>
            <th>Pass %</th>
            <th>Start</th>
            <th>End</th>
            <th>Approve Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Name</td>
                <td>@q.Subject?.Name</td>
                <td>@q.TotalMarks</td>
                <td>@q.RequiredPassPercentage</td>
                <td>@q.StartAt?.ToString("g")</td>
                <td>@q.EndAt?.ToString("g")</td>
                <td>
                    @if (q.Status == QuizSystemModel.BusinessRules.ModelStatus.Active)
                    {
                        <span class="badge bg-success text-white">Approved</span>
                    }
                    else if (q.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (q.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                    {
                        <span class="badge bg-danger text-white">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@q.Status</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@q.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-sm btn-danger">Delete</a>

                    @if (User.IsInRole("Admin"))
                    {
                        @if (!q.IsApproved)
                        {
                            <form asp-action="Approve" asp-route-id="@q.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Reject" asp-route-id="@q.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-secondary">Reject</button>
                            </form>
                        }
                    }

                    <a asp-controller="Question" asp-action="Index" asp-route-quizId="@q.Id" class="btn btn-sm btn-outline-primary">
                        Questions
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>