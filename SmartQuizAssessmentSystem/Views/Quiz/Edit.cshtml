@model QuizSystemModel.ViewModels.QuizViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Quiz";
}

<h2>Edit Quiz</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="EducationMediumId" class="form-label"></label>
            <select asp-for="EducationMediumId" class="form-select" asp-items="ViewBag.EducationMediumId" id="mediumSelect">
                <option value="">Select Education Medium</option>
            </select>
            <span asp-validation-for="EducationMediumId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="ClassId" class="form-label"></label>
            <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId" id="classSelect">
                <option value="">Select Class</option>
            </select>
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="SubjectId" class="form-label"></label>
            <select asp-for="SubjectId" class="form-select" asp-items="ViewBag.SubjectId" id="subjectSelect">
                <option value="">Select Subject</option>
            </select>
            <span asp-validation-for="SubjectId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="StartAt" class="form-label"></label>
            <input asp-for="StartAt" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="EndAt" class="form-label"></label>
            <input asp-for="EndAt" type="datetime-local" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="DurationMinutes" class="form-label">Duration (minutes)</label>
            <input asp-for="DurationMinutes" type="number" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="TotalMarks" class="form-label"></label>
            <input asp-for="TotalMarks" class="form-control" />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="NegativeMarking" class="form-label"></label>
            <input asp-for="NegativeMarking" class="form-control" />
            <span asp-validation-for="NegativeMarking" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="RequiredPassPercentage" class="form-label"></label>
            <input asp-for="RequiredPassPercentage" class="form-control" />
            <span asp-validation-for="RequiredPassPercentage" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Update Quiz</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#mediumSelect').change(function () {
                var mediumId = $(this).val();
                $('#classSelect').empty().append('<option value="">Select Class</option>');
                $('#subjectSelect').empty().append('<option value="">Select Subject</option>');
                if (mediumId) {
                    $.getJSON('@Url.Action("GetClasses", "Quiz")', { mediumId: mediumId }, function (data) {
                        $.each(data, function (i, item) {
                            $('#classSelect').append('<option value="' + item.id + '">' + item.name + '</option>');
                        });
                    });
                }
            });

            $('#classSelect').change(function () {
                var classId = $(this).val();
                $('#subjectSelect').empty().append('<option value="">Select Subject</option>');
                if (classId) {
                    $.getJSON('@Url.Action("GetSubjects", "Quiz")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $('#subjectSelect').append('<option value="' + item.id + '">' + item.name + '</option>');
                        });
                    });
                }
            });
        });
    </script>
}
