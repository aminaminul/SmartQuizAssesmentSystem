@model QuizSystemModel.ViewModels.QuizViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Quiz";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Quiz</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-12">
                        <label asp-for="Name" class="form-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter quiz name" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="EducationMediumId" class="form-label fw-bold">Education Medium</label>
                        <select asp-for="EducationMediumId" class="form-select" asp-items="ViewBag.EducationMediumId" id="mediumSelect">
                            <option value="">Select Education Medium</option>
                        </select>
                        <span asp-validation-for="EducationMediumId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="ClassId" class="form-label fw-bold">Class</label>
                        <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId" id="classSelect">
                            <option value="">Select Class</option>
                        </select>
                        <span asp-validation-for="ClassId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="SubjectId" class="form-label fw-bold">Subject</label>
                        <select asp-for="SubjectId" class="form-select" asp-items="ViewBag.SubjectId" id="subjectSelect">
                            <option value="">Select Subject</option>
                        </select>
                        <span asp-validation-for="SubjectId" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter quiz description"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="StartAt" class="form-label fw-bold">Start Time</label>
                        <input asp-for="StartAt" type="datetime-local" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="EndAt" class="form-label fw-bold">End Time</label>
                        <input asp-for="EndAt" type="datetime-local" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="DurationMinutes" class="form-label fw-bold">Duration (Minutes)</label>
                        <input asp-for="DurationMinutes" type="number" class="form-control" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="TotalMarks" class="form-label fw-bold">Total Marks</label>
                        <input asp-for="TotalMarks" class="form-control" />
                        <span asp-validation-for="TotalMarks" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="NegativeMarking" class="form-label fw-bold">Negative Marking</label>
                        <input asp-for="NegativeMarking" class="form-control" />
                        <span asp-validation-for="NegativeMarking" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="RequiredPassPercentage" class="form-label fw-bold">Pass Percentage (%)</label>
                        <input asp-for="RequiredPassPercentage" class="form-control" />
                        <span asp-validation-for="RequiredPassPercentage" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save me-1"></i> Update Quiz
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="fas fa-times me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('#mediumSelect').change(function () {
                var mediumId = $(this).val();
                $('#classSelect').empty().append('<option value="">Select Class</option>');
                $('#subjectSelect').empty().append('<option value="">Select Subject</option>');
                if (mediumId) {
                    $.getJSON('@Url.Action("GetClasses", "Quiz")', { mediumId: mediumId }, function (data) {
                        $.each(data, function (i, item) {
                            $('#classSelect').append('<option value="' + item.id + '">' + item.name + '</option>');
                        });
                    });
                }
            });

            $('#classSelect').change(function () {
                var classId = $(this).val();
                $('#subjectSelect').empty().append('<option value="">Select Subject</option>');
                if (classId) {
                    $.getJSON('@Url.Action("GetSubjects", "Quiz")', { classId: classId }, function (data) {
                        $.each(data, function (i, item) {
                            $('#subjectSelect').append('<option value="' + item.id + '">' + item.name + '</option>');
                        });
                    });
                }
            });
        });
    </script>
}
