@model QuizSystemModel.Models.QuestionBank

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var quiz = ViewBag.Quiz as QuizSystemModel.Models.Quiz;
    ViewData["Title"] = "Delete Question";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-danger text-white py-3">
            <h5 class="mb-0">Delete Question - @quiz?.Name</h5>
        </div>
        <div class="card-body">
            <h6 class="text-danger mb-4">Are you sure you want to delete this question?</h6>
            
            <div class="row mb-4">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3 text-muted fw-bold">Question Text</dt>
                        <dd class="col-sm-9">@Model.QuestionText</dd>

                        <dt class="col-sm-3 text-muted fw-bold">Status</dt>
                        <dd class="col-sm-9">
                            <span class="badge @(Model.Status == QuizSystemModel.BusinessRules.ModelStatus.Active ? "bg-success" : "bg-warning")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
                <a asp-action="Index" asp-route-quizId="@Model.QuizId" asp-route-subject="@Model.Subject" class="btn btn-outline-secondary px-4 ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>
