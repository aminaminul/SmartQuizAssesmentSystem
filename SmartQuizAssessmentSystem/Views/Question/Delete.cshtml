@model QuizSystemModel.Models.QuestionBank

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    var quiz = ViewBag.Quiz as QuizSystemModel.Models.Quiz;
    ViewData["Title"] = "Delete Question";
}

<h2>Delete Question - @quiz?.Name</h2>

<h4>Are you sure you want to delete this question?</h4>

<div class="mb-3">
    <strong>@Model.QuestionText</strong>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-quizId="@Model.QuizId" asp-route-subject="@Model.Subject" class="btn btn-secondary">
        Cancel
    </a>
</form>
