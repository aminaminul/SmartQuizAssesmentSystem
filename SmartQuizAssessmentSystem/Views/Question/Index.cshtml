@model IEnumerable<QuizSystemModel.Models.QuestionBank>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var quiz = ViewBag.Quiz as QuizSystemModel.Models.Quiz;
    string subject = ViewBag.Subject as string;
    ViewData["Title"] = "Questions for " + quiz?.Name;
}

<h2>Questions - @quiz?.Name</h2>

<div class="mb-3">
    <strong>Filter by subject:</strong>
    <a asp-action="Index" asp-route-quizId="@quiz.Id" class="btn btn-sm @(string.IsNullOrEmpty(subject) ? "btn-primary" : "btn-outline-primary")">All</a>
    <a asp-action="Index" asp-route-quizId="@quiz.Id" asp-route-subject="English" class="btn btn-sm @(subject == "English" ? "btn-primary" : "btn-outline-primary")">English</a>
    <a asp-action="Index" asp-route-quizId="@quiz.Id" asp-route-subject="Bangla" class="btn btn-sm @(subject == "Bangla" ? "btn-primary" : "btn-outline-primary")">Bangla</a>
    <a asp-action="Index" asp-route-quizId="@quiz.Id" asp-route-subject="Math" class="btn btn-sm @(subject == "Math" ? "btn-primary" : "btn-outline-primary")">Math</a>
</div>

<p>
    <a asp-action="Create" asp-route-quizId="@quiz.Id" asp-route-subject="@subject" class="btn btn-primary">
        Add Question
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Question</th>
            <th>Marks</th>
            <th>Right Option</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Subject</td>
                <td>@q.QuestionText</td>
                <td>@q.Marks</td>
                <td>@q.RightOption</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Quiz" asp-action="Index" class="btn btn-secondary">Back to Quizzes</a>
