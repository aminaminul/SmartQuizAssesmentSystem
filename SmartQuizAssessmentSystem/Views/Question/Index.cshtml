@model IEnumerable<QuizSystemModel.Models.QuestionBank>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var quiz = ViewBag.Quiz as QuizSystemModel.Models.Quiz;
    string subject = ViewBag.Subject as string;
    ViewData["Title"] = "Questions for " + quiz?.Name;
}

<h4>Questions - @quiz?.Name</h4>

<form asp-action="Index" method="get" class="mb-3 d-flex align-items-center">
    <input type="hidden" name="quizId" value="@quiz?.Id" />
    <strong class="me-2">Filter by subject:</strong>
    <select name="subject" class="form-select form-select-sm w-auto" onchange="this.form.submit()">
        <option value="" selected="@(string.IsNullOrEmpty(subject))">All</option>
        @{
            var subjects = ViewBag.Subjects as List<QuizSystemModel.Models.Subject>;
            if (subjects != null)
            {
                foreach (var subj in subjects)
                {
                    <option value="@subj.Name" selected="@(subject == subj.Name)">@subj.Name</option>
                }
            }
        }
    </select>
</form>
<div class="alert alert-info py-2">
    <div class="row">
        <div class="col-md-3"><strong>Quiz Total Marks:</strong> @quiz?.TotalMarks</div>
        <div class="col-md-3"><strong>Questions Added:</strong> @Model.Count()</div>
        <div class="col-md-3"><strong>Marks Assigned:</strong> <span class="@(Model.Sum(x => x.Marks) > quiz?.TotalMarks ? "text-danger" : "")">@Model.Sum(x => x.Marks)</span></div>
        <div class="col-md-3"><strong>Negative Marking:</strong> @quiz?.NegativeMarking</div>
    </div>
</div>

<p>
    <a asp-action="Create" asp-route-quizId="@quiz.Id" asp-route-subject="@subject" class="btn btn-primary">
        Add Question
    </a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Question</th>
            <th>Marks</th>
            <th>Right Option</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var q in Model)
        {
            <tr>
                <td>@q.Subject</td>
                <td>@q.QuestionText</td>
                <td>@q.Marks</td>
                <td>@q.RightOption</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@q.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Quiz" asp-action="Index" class="btn btn-secondary">Back to Quizzes</a>
