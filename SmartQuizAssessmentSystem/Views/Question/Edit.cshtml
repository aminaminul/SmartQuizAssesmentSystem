@model QuizSystemModel.ViewModels.QuestionViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var quiz = ViewBag.Quiz as QuizSystemModel.Models.Quiz;
    ViewData["Title"] = "Edit Question";
}

<div class="container-fluid">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Edit Question - @quiz?.Name</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="QuizId" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Subject" class="form-label fw-bold"></label>
                        <select asp-for="Subject" class="form-select">
                            <option>English</option>
                            <option>Bangla</option>
                            <option>Math</option>
                        </select>
                        <span asp-validation-for="Subject" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Name" class="form-label fw-bold">Title</label>
                        <input asp-for="Name" class="form-control" placeholder="Short question title" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-12" id="textQuestionContainer">
                        <label asp-for="QuestionText" class="form-label fw-bold">Question Content</label>
                        <textarea asp-for="QuestionText" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="QuestionText" class="text-danger small"></span>
                    </div>

                    <div class="col-12 d-none" id="mathQuestionContainer">
                        <label class="form-label fw-bold">Math Question (MathLive)</label>
                        <math-field id="mathQuestion" style="width:100%; min-height:60px; border:1px solid #ccc;"></math-field>
                        <input type="hidden" asp-for="QuestionText" id="QuestionTextHidden" />
                        <span asp-validation-for="QuestionText" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold"></label>
                        <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OptionA" class="form-label fw-bold">Option A</label>
                        <input asp-for="OptionA" class="form-control" />
                        <span asp-validation-for="OptionA" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="OptionB" class="form-label fw-bold">Option B</label>
                        <input asp-for="OptionB" class="form-control" />
                        <span asp-validation-for="OptionB" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="OptionC" class="form-label fw-bold">Option C</label>
                        <input asp-for="OptionC" class="form-control" />
                        <span asp-validation-for="OptionC" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="OptionD" class="form-label fw-bold">Option D</label>
                        <input asp-for="OptionD" class="form-control" />
                        <span asp-validation-for="OptionD" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RightOption" class="form-label fw-bold">Correct Option</label>
                        <select asp-for="RightOption" class="form-select">
                            <option value="">-- Select --</option>
                            <option value="A">Option A</option>
                            <option value="B">Option B</option>
                            <option value="C">Option C</option>
                            <option value="D">Option D</option>
                        </select>
                        <span asp-validation-for="RightOption" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Marks" class="form-label fw-bold"></label>
                        <input asp-for="Marks" class="form-control" />
                        <span asp-validation-for="Marks" class="text-danger small"></span>
                        <div class="form-text">
                            Quiz Total: @quiz?.TotalMarks | Negative Marking: @quiz?.NegativeMarking
                        </div>
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="fas fa-save me-1"></i> Update Question
                    </button>
                    <a asp-action="Index" asp-route-quizId="@Model.QuizId" asp-route-subject="@Model.Subject" class="btn btn-outline-secondary px-4 shadow-sm">
                        <i class="fas fa-arrow-left me-1"></i> Back to Questions
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://unpkg.com/mathlive"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const subjectSelect = document.getElementById('@Html.IdFor(m => m.Subject)');
            const textContainer = document.getElementById('textQuestionContainer');
            const mathContainer = document.getElementById('mathQuestionContainer');
            const hidden = document.getElementById('QuestionTextHidden');
            const textarea = document.getElementById('@Html.IdFor(m => m.QuestionText)');
            const mf = document.getElementById('mathQuestion');

            function updateUI() {
                if (subjectSelect.value === 'Math') {
                    textContainer.classList.add('d-none');
                    mathContainer.classList.remove('d-none');
                    mf.value = textarea.value || '';
                    hidden.value = mf.value;
                } else {
                    textContainer.classList.remove('d-none');
                    mathContainer.classList.add('d-none');
                }
            }

            subjectSelect.addEventListener('change', updateUI);

            mf.addEventListener('input', () => {
                hidden.value = mf.value;
            });

            updateUI();
        });
    </script>
}
