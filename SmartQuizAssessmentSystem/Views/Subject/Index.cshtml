@model IEnumerable<QuizSystemModel.Models.Subject>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Subjects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4>Subjects</h4>
    <div class="d-flex gap-2">
        <a asp-action="Pending" class="btn btn-warning btn-sm">Pending Approvals</a>
        <a asp-action="Create" class="btn btn-primary btn-sm">Create New Subject</a>
    </div>
</div>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label for="educationMediumId" class="form-label">Education Medium</label>
                <select name="educationMediumId" id="educationMediumId" class="form-select" asp-items="ViewBag.EducationMediumId">
                    <option value="">All Mediums</option>
                </select>
            </div>
            <div class="col-md-4">
                <label for="classId" class="form-label">Class</label>
                <select name="classId" id="classId" class="form-select" asp-items="ViewBag.ClassId">
                    <option value="">All Classes</option>
                </select>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-secondary">Filter</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Reset</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            var mediumDropdown = $('#educationMediumId');
            var classDropdown = $('#classId');

            mediumDropdown.change(function () {
                var mediumId = $(this).val();
                classDropdown.empty();
                classDropdown.append('<option value="">All Classes</option>');

                if (mediumId) {
                    $.ajax({
                        url: '@Url.Action("GetClassesByMedium", "Instructor")',
                        type: 'GET',
                        data: { mediumId: mediumId },
                        success: function (data) {
                            $.each(data, function (i, item) {
                                classDropdown.append($('<option>', {
                                    value: item.id,
                                    text: item.name
                                }));
                            });
                        }
                    });
                }
            });
        });
    </script>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Created At</th>
            <th style="width: 200px;">Approve Status</th>
            <th style="width: 200px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Class?.Name</td>
                <td>@item.CreatedAt.ToString("yyyy-MM-dd")</td>
                <td>
                    @if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.Active)
                    {
                        <span class="badge bg-success text-white">Approved</span>
                    }
                    else if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (item.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                    {
                        <span class="badge bg-danger text-white">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@item.Status</span>
                    }
                </td>
                <td>
                    <div class="d-flex gap-1 justify-content-end">
                            <form asp-controller="Subject" asp-action="Approve" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="redirect" value="Index" />
                                <button type="submit" class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form asp-controller="Subject" asp-action="Reject" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="redirect" value="Index" />
                                <button type="submit" class="btn btn-sm btn-warning">Reject</button>
                            </form>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
