@model IEnumerable<QuizSystemModel.Models.Subject>

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Subjects";
}

<h4>Subjects</h4>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Subject</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Approved</th>
            <th>Created At</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@(item.IsApproved ? "Yes" : "No")</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <form asp-action="Approve" asp-route-id="@item.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0">Approve</button>
                    </form> |
                    <form asp-action="Reject" asp-route-id="@item.Id" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-link p-0">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
