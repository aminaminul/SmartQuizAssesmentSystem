@model QuizSystemModel.Models.Subject

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Subject Details";
}

<h2>Subject Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Class</dt>
        <dd class="col-sm-10">@Model.Class?.Name</dd>

        <dt class="col-sm-2">Approved</dt>
        <dd class="col-sm-10">@Model.IsApproved</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Approved At</dt>
        <dd class="col-sm-10">
            @(Model.ApprovedAt.HasValue
                        ? Model.ApprovedAt.Value.ToString("yyyy-MM-dd HH:mm")
                        : "N/A")
        </dd>

        <dt class="col-sm-2">Rejected At</dt>
        <dd class="col-sm-10">
            @(Model.RejectedAt.HasValue
                        ? Model.RejectedAt.Value.ToString("yyyy-MM-dd HH:mm")
                        : "N/A")
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
