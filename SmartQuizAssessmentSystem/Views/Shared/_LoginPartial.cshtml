@using Microsoft.AspNetCore.Identity;
@inject SignInManager<QuizSystemUser> signInManager;
@inject UserManager<QuizSystemUser> userManager;

@{
    var user = await userManager.GetUserAsync(User);
    string initials = "U";
    if (user != null)
    {
        string fn = !string.IsNullOrWhiteSpace(user.FirstName) ? user.FirstName.Substring(0, 1) : "";
        string ln = !string.IsNullOrWhiteSpace(user.LastName) ? user.LastName.Substring(0, 1) : "";
        initials = (fn + ln).ToUpper();
        if (string.IsNullOrEmpty(initials)) initials = user.UserName?.Substring(0, 1).ToUpper() ?? "U";
    }

    // Determine Profile Link
    string profileController = "StudentDashboard";
    string profileAction = "ViewProfile";
    if (User.IsInRole("Admin")) { profileController = "AdminDashboard"; profileAction = "Profile"; }
    else if (User.IsInRole("Instructor")) { profileController = "InstructorDashboard"; profileAction = "ViewProfile"; }
}

<div class="user-profile-wrapper d-flex align-items-center">
    @if (signInManager.IsSignedIn(User))
    {
        <!-- Clickable Main Section (Navigates to Profile) -->
        <a asp-controller="@profileController" asp-action="@profileAction" class="user-profile-main-link text-decoration-none d-flex align-items-center">
            <div class="d-none d-lg-block me-3 text-end">
                <div class="fw-bold text-dark lh-1" style="font-size: 0.9rem;">@user?.FirstName @user?.LastName</div>
                <small style="font-size: 0.75rem;">
                    @if (User.IsInRole("Admin")) { <span class="text-muted">Administrator</span> }
                    else if (User.IsInRole("Instructor")) { <span class="text-info fw-bold">Instructor</span> }
                    else { <span class="text-success fw-bold">Student</span> }
                </small>
            </div>
            <div class="user-avatar shadow-sm">
                @initials
            </div>
        </a>

        <!-- Separate Dropdown Trigger -->
        <div class="dropdown ms-1">
            <button class="btn btn-link link-secondary p-1 dropdown-toggle no-caret" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-chevron-down opacity-50" style="font-size: 0.8rem;"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 mt-2 p-2" style="min-width: 200px; border-radius: 12px;">
                <li>
                    <div class="dropdown-header text-muted text-uppercase fw-bold" style="font-size: 0.7rem;">Account Settings</div>
                </li>
                <li>
                    <a class="dropdown-item rounded-3 py-2" asp-controller="@profileController" asp-action="@profileAction">
                        <i class="fas fa-user-circle me-2 opacity-50"></i>My Profile
                    </a>
                </li>
                <li><hr class="dropdown-divider opacity-10"></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="dropdown-item text-danger rounded-3 py-2 w-100 text-start border-0 bg-transparent">
                            <i class="fas fa-sign-out-alt me-2 opacity-75"></i>Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    }
    else
    {
        <div class="d-flex gap-2">
            <a class="btn btn-sm btn-outline-primary px-3 rounded-pill" asp-controller="Account" asp-action="Login">Login</a>
            <a class="btn btn-sm btn-primary px-3 rounded-pill shadow-sm" asp-controller="Account" asp-action="Register">Sign Up</a>
        </div>
    }
</div>

<style>
    .user-profile-main-link {
        padding: 0.4rem 0.8rem;
        border-radius: 12px;
        transition: all 0.2s ease;
        background: #f8fafc;
        border: 1px solid #f1f5f9;
        cursor: pointer;
    }
    .user-profile-main-link:hover {
        background: #f1f5f9;
        transform: translateY(-1px);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }
    .no-caret::after {
        display: none !important;
    }
</style>