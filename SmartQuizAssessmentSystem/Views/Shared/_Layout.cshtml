@using Microsoft.AspNetCore.Identity
@using QuizSystemModel.Models
@inject UserManager<QuizSystemUser> UserManager

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] Quiz Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/account.css" />

    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            width: 230px;
            min-height: 100vh;
            background: #ffffff;
            border-right: 1px solid #ddd;
        }

            .sidebar a {
                padding: 10px 15px;
                display: block;
                color: #333;
                text-decoration: none;
            }

                .sidebar a:hover, .sidebar .active {
                    background: #ffc107;
                    color: #000;
                    border-radius: 6px;
                }

        .topbar {
            background: #fff;
            padding: 10px 20px;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <div class="sidebar p-3">
            @{
                if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Admin"))
                    {
                        <h5 class="text-center mb-4">ADMIN</h5>

                        <a asp-controller="AdminDashboard" asp-action="Dashboard" class="active">Dashboard</a>
                        <a asp-controller="Quiz" asp-action="Index">Manage Quiz</a>
                        <a asp-controller="Instructor" asp-action="Index">Instructors</a>
                        <a asp-controller="Student" asp-action="Index">Students</a>
                        <a asp-controller="EducationMedium" asp-action="Index">Education Medium</a>
                        <a asp-controller="Class" asp-action="Index">Classes</a>
                        <a asp-controller="Subject" asp-action="Index">Subjects</a>
                        <a asp-controller="ProfileApproval" asp-action="Pending" class="nav-link">
                            Profile Update Requests
                        </a>
                        <a asp-controller="AdminDashboard" asp-action="Profile">My Profile</a>
                    }
                    else if (User.IsInRole("Instructor"))
                    {
                        <h5 class="text-center mb-4">INSTRUCTOR</h5>

                        <a asp-controller="InstructorDashboard" asp-action="Dashboard" class="active">Dashboard</a>
                        <a asp-controller="Quiz" asp-action="Index">Manage Quiz</a>
                        <a asp-controller="InstructorDashboard" asp-action="Instructors">Instructors</a>
                        <a asp-controller="InstructorDashboard" asp-action="Students">Students</a>
                        <a asp-controller="InstructorDashboard" asp-action="EducationMediums">Education Medium</a>
                        <a asp-controller="InstructorDashboard" asp-action="Classes">Classes</a>
                        <a asp-controller="InstructorDashboard" asp-action="Subjects">Subjects</a>
                        <a asp-controller="InstructorDashboard" asp-action="ViewProfile" class="nav-link">
                            View Profile
                        </a>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <h5 class="text-center mb-4">STUDENT</h5>

                        <a asp-controller="StudentDashboard" asp-action="Dashboard" class="active">Dashboard</a>
                        <a asp-controller="StudentDashboard" asp-action="AvailableQuizzes">Available Quizzes</a>
                        <a asp-controller="StudentDashboard" asp-action="RecentAttempts">Recent Attempts</a>
                        <a asp-controller="StudentDashboard" asp-action="AllAttempts">All Attempts</a>
                        <a asp-controller="StudentDashboard" asp-action="ViewProfile" class="nav-link">
                            View Profile
                        </a>
                    }
                }
            }
        </div>

        <div class="flex-grow-1">
            <div class="topbar d-flex justify-content-between align-items-center">
                @if (User.IsInRole("Admin"))
                {
                    <form asp-controller="AdminDashboard" asp-action="Search" method="get" class="w-25">
                        <div class="input-group">
                            <input name="query" class="form-control" placeholder="Search..." value="@ViewBag.SearchQuery" />
                            <button class="btn btn-warning" type="submit">Search</button>
                        </div>
                    </form>
                }

                <partial name="_LoginPartial" />
            </div>

            <div class="p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
