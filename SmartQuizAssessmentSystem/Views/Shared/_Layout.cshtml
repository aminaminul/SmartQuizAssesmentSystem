@using Microsoft.AspNetCore.Identity
@using QuizSystemModel.Models
@using QuizSystemModel.Interfaces
@inject UserManager<QuizSystemUser> UserManager
@inject IAdminDashboardRepository DashboardRepo

@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    string IsActive(string controller, string action = null)
    {
        bool active = string.Equals(controller, currentController, StringComparison.OrdinalIgnoreCase) && 
                      (action == null || string.Equals(action, currentAction, StringComparison.OrdinalIgnoreCase));
        return active ? "active" : "";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quiz Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/account.css" />

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .sidebar {
            width: 260px;
            height: 100vh;
            position: sticky;
            top: 0;
            background: #111111; /* Solid black */
            color: #ffffff;
            transition: all 0.3s;
            z-index: 1000;
            flex-shrink: 0;
            overflow-y: auto;
        }

        .sidebar-header {
            padding: 2rem 1.5rem;
            border-bottom: 1px solid #222;
        }

        .sidebar-header h5 {
            color: #ffc107;
            font-weight: 700;
            letter-spacing: 1px;
            margin: 0;
            text-transform: uppercase;
        }

        .sidebar-nav {
            padding: 1.5rem 0.75rem;
        }

        .sidebar a {
            padding: 0.8rem 1.2rem;
            display: flex;
            align-items: center;
            color: #adb5bd;
            text-decoration: none;
            transition: all 0.2s ease;
            margin-bottom: 0.3rem;
            font-size: 0.95rem;
            border-radius: 8px;
        }

        .sidebar a i {
            width: 20px;
            margin-right: 12px;
            font-size: 1.1rem;
        }

        .sidebar a:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #ffffff;
        }

        .sidebar a.active {
            background: #ffc107;
            color: #000000;
            font-weight: 600;
            box-shadow: 0 4px 12px rgba(255, 193, 7, 0.2);
        }

        .sidebar a.active i {
            color: #000000;
        }

        .section-label {
            padding: 1.5rem 1.2rem 0.5rem;
            font-size: 0.75rem;
            text-transform: uppercase;
            font-weight: 700;
            color: #6c757d;
            letter-spacing: 1.5px;
        }

        .sidebar-website-link {
            border: 1px solid rgba(255, 193, 7, 0.2);
            background: rgba(255, 193, 7, 0.05);
            margin-top: 1rem !important;
        }

        .sidebar-website-link:hover {
            background: rgba(255, 193, 7, 0.1) !important;
            border-color: #ffc107 !important;
        }

        .topbar {
            background: #ffffff;
            padding: 0.5rem 2rem;
            border-bottom: 1px solid #edf2f7;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
            z-index: 999;
            height: 70px;
        }

        .search-container {
            position: relative;
            max-width: 400px;
            width: 100%;
        }

        .search-container input {
            padding-left: 2.5rem;
            border-radius: 10px;
            background-color: #f1f5f9;
            border: 1px solid transparent;
            font-size: 0.9rem;
            height: 40px;
            transition: all 0.2s;
        }

        .search-container input:focus {
            background-color: #ffffff;
            border-color: #ffc107;
            box-shadow: 0 0 0 4px rgba(255, 193, 7, 0.1);
        }

        .search-container i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
        }

        .top-nav-btn {
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            color: #64748b;
            transition: all 0.2s;
            position: relative;
            text-decoration: none;
            background: #f8fafc;
            border: 1px solid #f1f5f9;
        }

        .top-nav-btn:hover {
            color: #0f172a;
            background: #f1f5f9;
            transform: translateY(-1px);
        }

        .top-nav-btn.text-danger:hover {
            background: #fff1f2;
            color: #ef4444;
            border-color: #fecaca;
        }

        .notification-badge {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 8px;
            height: 8px;
            background: #ef4444;
            border-radius: 50%;
            border: 2px solid #ffffff;
        }

        .user-profile-toggle {
            display: flex;
            align-items: center;
            padding: 0.5rem 1rem;
            border-radius: 12px;
            transition: all 0.2s;
            cursor: pointer;
            border: 1px solid #f1f5f9;
            background: #f8fafc;
        }

        .user-profile-toggle:hover {
            background: #f1f5f9;
        }

        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 10px;
            background: #ffc107;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #000;
            margin-right: 12px;
        }

        .user-profile-toggle::after, 
        .user-avatar.dropdown-toggle::after {
            display: none;
        }

        .content-area {
            padding: 2rem;
            background: #f8f9fa;
        }

        /* custom scrollbar for sidebar */
        .sidebar::-webkit-scrollbar {
            width: 4px;
        }
        .sidebar::-webkit-scrollbar-thumb {
            background: #333;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar shadow">
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <div class="sidebar-header text-center border-0 pb-0">
                    <h4 class="text-white fw-bold mb-0">Quiz <span class="text-warning">Management</span></h4>
                </div>
                <div class="px-3 pb-3">
                    <div class="p-3 rounded-4 bg-dark bg-opacity-50 border border-secondary border-opacity-25">
                        @if (User.IsInRole("Admin"))
                        {
                            <h6 class="mb-0 text-warning d-flex align-items-center justify-content-center"><i class="fas fa-user-shield me-2"></i>Admin</h6>
                        }
                        else if (User.IsInRole("Instructor"))
                        {
                            <h6 class="mb-0 text-warning d-flex align-items-center justify-content-center"><i class="fas fa-chalkboard-teacher me-2"></i>Instructor</h6>
                        }
                        else if (User.IsInRole("Student"))
                        {
                            <h6 class="mb-0 text-warning d-flex align-items-center justify-content-center"><i class="fas fa-user-graduate me-2"></i>Student Portal</h6>
                        }
                    </div>
                </div>

                <div class="sidebar-nav">
                    @if (User.IsInRole("Admin"))
                    {
                        // Fetch counts only for Admin
                        long pInst = await DashboardRepo.GetPendingInstructorCountAsync();
                        long pQuiz = await DashboardRepo.GetPendingQuizCountAsync();
                        long pMed = await DashboardRepo.GetPendingEducationMediumCountAsync();
                        long pClass = await DashboardRepo.GetPendingClassCountAsync();
                        long pSub = await DashboardRepo.GetPendingSubjectCountAsync();
                        long pProf = await DashboardRepo.GetPendingProfileUpdateCountAsync();
                        long totalPending = pInst + pQuiz + pMed + pClass + pSub + pProf;

                        <a asp-controller="AdminDashboard" asp-action="Dashboard" class="@IsActive("AdminDashboard", "Dashboard")">
                            <i class="fas fa-th-large"></i> Dashboard
                        </a>
                        <a asp-controller="Quiz" asp-action="Index" class="@IsActive("Quiz")">
                            <i class="fas fa-tasks"></i> Manage Quiz
                        </a>
                        <a asp-controller="Instructor" asp-action="Index" class="@IsActive("Instructor")">
                            <i class="fas fa-chalkboard-teacher"></i> Instructors
                        </a>
                        <a asp-controller="Student" asp-action="Index" class="@IsActive("Student")">
                            <i class="fas fa-user-graduate"></i> Students
                        </a>
                        <a asp-controller="EducationMedium" asp-action="Index" class="@IsActive("EducationMedium")">
                            <i class="fas fa-book"></i> Education Medium
                        </a>
                        <a asp-controller="Class" asp-action="Index" class="@IsActive("Class")">
                            <i class="fas fa-graduation-cap"></i> Classes
                        </a>
                        <a asp-controller="Subject" asp-action="Index" class="@IsActive("Subject")">
                            <i class="fas fa-book-open"></i> Subjects
                        </a>
                        
                        <div class="section-label d-flex justify-content-between align-items-center">
                            Pending Approvals
                            @if(totalPending > 0) {
                                <span class="badge bg-warning text-dark rounded-pill" style="font-size: 0.7em;">@totalPending</span>
                            }
                        </div>
                        
                        <a asp-controller="Instructor" asp-action="Pending" class="@IsActive("Instructor", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-chalkboard-teacher"></i> Instructors</span>
                            @if(pInst > 0) { <span class="badge bg-danger rounded-pill">@pInst</span> }
                        </a>
                        <a asp-controller="Quiz" asp-action="Pending" class="@IsActive("Quiz", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-tasks"></i> Quizzes</span>
                            @if(pQuiz > 0) { <span class="badge bg-danger rounded-pill">@pQuiz</span> }
                        </a>
                        <a asp-controller="EducationMedium" asp-action="Pending" class="@IsActive("EducationMedium", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-book"></i> Edu Mediums</span>
                             @if(pMed > 0) { <span class="badge bg-danger rounded-pill">@pMed</span> }
                        </a>
                        <a asp-controller="Class" asp-action="Pending" class="@IsActive("Class", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-graduation-cap"></i> Classes</span>
                             @if(pClass > 0) { <span class="badge bg-danger rounded-pill">@pClass</span> }
                        </a>
                        <a asp-controller="Subject" asp-action="Pending" class="@IsActive("Subject", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-book-open"></i> Subjects</span>
                             @if(pSub > 0) { <span class="badge bg-danger rounded-pill">@pSub</span> }
                        </a>
                        <a asp-controller="ProfileApproval" asp-action="Pending" class="@IsActive("ProfileApproval", "Pending") d-flex justify-content-between align-items-center">
                            <span><i class="fas fa-user-check"></i> Profile Updates</span>
                             @if(pProf > 0) { <span class="badge bg-danger rounded-pill">@pProf</span> }
                        </a>

                        <div class="section-label">Performance Analytics</div>
                        <a asp-controller="Performance" asp-action="Student" class="@IsActive("Performance", "Student")">
                            <i class="fas fa-chart-line"></i> Student Performance
                        </a>
                        <a asp-controller="Performance" asp-action="Class" class="@IsActive("Performance", "Class")">
                            <i class="fas fa-chart-bar"></i> Class Performance
                        </a>
                        <a asp-controller="Performance" asp-action="EducationMedium" class="@IsActive("Performance", "EducationMedium")">
                            <i class="fas fa-chart-pie"></i> Medium Performance
                        </a>
                        <a asp-controller="AdminDashboard" asp-action="Profile" class="@IsActive("AdminDashboard", "Profile")">
                            <i class="fas fa-user-circle"></i> My Profile
                        </a>
                    }
                    else if (User.IsInRole("Instructor"))
                    {
                        <a asp-controller="InstructorDashboard" asp-action="Dashboard" class="@IsActive("InstructorDashboard", "Dashboard")">
                            <i class="fas fa-th-large"></i> Dashboard
                        </a>
                        <a asp-controller="Quiz" asp-action="Index" class="@IsActive("Quiz")">
                            <i class="fas fa-tasks"></i> Manage Quiz
                        </a>
                        <a asp-controller="InstructorDashboard" asp-action="Instructors" class="@IsActive("InstructorDashboard", "Instructors")">
                            <i class="fas fa-chalkboard-teacher"></i> Instructors
                        </a>
                        <a asp-controller="InstructorDashboard" asp-action="Students" class="@IsActive("InstructorDashboard", "Students")">
                            <i class="fas fa-user-graduate"></i> Students
                        </a>
                        <a asp-controller="InstructorDashboard" asp-action="EducationMediums" class="@IsActive("InstructorDashboard", "EducationMediums")">
                            <i class="fas fa-book"></i> Mediums
                        </a>
                        <a asp-controller="InstructorDashboard" asp-action="Classes" class="@IsActive("InstructorDashboard", "Classes")">
                            <i class="fas fa-graduation-cap"></i> Classes
                        </a>
                        <a asp-controller="InstructorDashboard" asp-action="Subjects" class="@IsActive("InstructorDashboard", "Subjects")">
                            <i class="fas fa-book-open"></i> Subjects
                        </a>
                        
                        <div class="section-label">Assigned Management</div>
                        <a asp-controller="InstructorDashboard" asp-action="MyClassStudents" class="@IsActive("InstructorDashboard", "MyClassStudents")">
                            <i class="fas fa-users-cog"></i> My Class Students
                        </a>

                        <div class="section-label">Performance Analytics</div>
                        <a asp-controller="Performance" asp-action="Student" class="@IsActive("Performance", "Student")">
                            <i class="fas fa-chart-line"></i> Student Performance
                        </a>
                        <a asp-controller="Performance" asp-action="Class" class="@IsActive("Performance", "Class")">
                            <i class="fas fa-chart-bar"></i> Class Performance
                        </a>
                        <a asp-controller="Performance" asp-action="EducationMedium" class="@IsActive("Performance", "EducationMedium")">
                            <i class="fas fa-chart-pie"></i> Medium Performance
                        </a>

                        <a asp-controller="InstructorDashboard" asp-action="ViewProfile" class="@IsActive("InstructorDashboard", "ViewProfile")">
                            <i class="fas fa-user-circle"></i> View Profile
                        </a>
                    }
                    else if (User.IsInRole("Student"))
                    {
                        <a asp-controller="StudentDashboard" asp-action="Dashboard" class="@IsActive("StudentDashboard", "Dashboard")">
                            <i class="fas fa-th-large"></i> Dashboard
                        </a>
                        <a asp-controller="StudentDashboard" asp-action="AvailableQuizzes" class="@IsActive("StudentDashboard", "AvailableQuizzes")">
                            <i class="fas fa-pencil-alt"></i> Available Quizzes
                        </a>
                        <a asp-controller="StudentDashboard" asp-action="RecentAttempts" class="@IsActive("StudentDashboard", "RecentAttempts")">
                            <i class="fas fa-history"></i> Recent Attempts
                        </a>
                        <a asp-controller="Performance" asp-action="MyPerformance" class="@IsActive("Performance", "MyPerformance")">
                            <i class="fas fa-chart-line"></i> My Performance
                        </a>
                        <a asp-controller="StudentDashboard" asp-action="ViewProfile" class="@IsActive("StudentDashboard", "ViewProfile")">
                            <i class="fas fa-user-circle"></i> View Profile
                        </a>
                    }

                    <div class="section-label">System Navigation</div>
                    <a asp-controller="Home" asp-action="Index" class="sidebar-website-link @IsActive("Home", "Index")">
                        <i class="fas fa-globe"></i> Back to Website
                    </a>
                </div>
            }
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 d-flex flex-column" style="overflow-x: hidden;">
            <div class="topbar d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center flex-grow-1">
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-controller="AdminDashboard" asp-action="Search" method="get" class="search-container ms-2">
                            <i class="fas fa-search"></i>
                            <input name="query" class="form-control" placeholder="Search everything..." value="@ViewBag.SearchQuery" />
                        </form>
                    }
                    else
                    {
                        <div class="d-none d-md-block">
                            <h6 class="mb-0 text-muted ms-2">
                                <span class="fw-normal">Welcome back,</span> <span class="text-dark fw-bold">@User.Identity?.Name</span>
                            </h6>
                        </div>
                    }
                </div>

                <div class="d-flex align-items-center gap-3">
                    <!-- Help Icon -->
                    <a asp-controller="Home" asp-action="Privacy" class="top-nav-btn" title="Privacy Policy">
                        <i class="far fa-question-circle"></i>
                    </a>

                    <div class="vr mx-1 text-muted opacity-25" style="height: 30px;"></div>

                    <!-- Direct Logout Icon (NEW) -->
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="top-nav-btn text-danger border-danger border-opacity-10" title="Logout">
                            <i class="fas fa-power-off"></i>
                        </button>
                    </form>

                    <div class="vr mx-1 text-muted opacity-25" style="height: 30px;"></div>

                    <partial name="_LoginPartial" />
                </div>
            </div>

            <main role="main" class="content-area">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
