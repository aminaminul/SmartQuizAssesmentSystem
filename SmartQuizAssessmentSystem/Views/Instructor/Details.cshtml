@model QuizSystemModel.Models.Instructor

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Instructor Details";
}

<h4>Instructor Details</h4>

<dl class="row">
    <dt class="col-sm-2">First Name</dt>
    <dd class="col-sm-10">@Model.FirstName</dd>

    <dt class="col-sm-2">Last Name</dt>
    <dd class="col-sm-10">@Model.LastName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Phone</dt>
    <dd class="col-sm-10">@Model.PhoneNumber</dd>

    <dt class="col-sm-2">HSC Institute</dt>
    <dd class="col-sm-10">@Model.HscPassingInstrutute</dd>

    <dt class="col-sm-2">HSC Year</dt>
    <dd class="col-sm-10">@Model.HscPassingYear</dd>

    <dt class="col-sm-2">HSC Grade</dt>
    <dd class="col-sm-10">@Model.HscGrade</dd>

    <dt class="col-sm-2">Education Medium</dt>
    <dd class="col-sm-10">@Model.EducationMedium?.Name</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
