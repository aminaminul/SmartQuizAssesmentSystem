@model QuizSystemModel.Models.Instructor

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Instructor";
}

<h4>Edit Instructor</h4>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label"> Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email Address</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HscPassingInstrutute" class="form-label">Hsc Passing Instrutute</label>
        <input asp-for="HscPassingInstrutute" class="form-control" />
        <span asp-validation-for="HscPassingInstrutute" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HscPassingYear" class="form-label">Hsc Passing Year</label>
        <input asp-for="HscPassingYear" class="form-control" />
        <span asp-validation-for="HscPassingYear" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HscGrade" class="form-label">Hsc Grade</label>
        <input asp-for="HscGrade" class="form-control" />
        <span asp-validation-for="HscGrade" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Education Medium</label>
        <select name="educationMediumId" class="form-select"
                asp-items="(Microsoft.AspNetCore.Mvc.Rendering.SelectList)ViewBag.EducationMediumId">
            <option value="">Select Education Medium</option>
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Status" class="form-label"></label>
        <select asp-for="Status" class="form-select"
                asp-items="Html.GetEnumSelectList<QuizSystemModel.BusinessRules.ModelStatus>()">
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
