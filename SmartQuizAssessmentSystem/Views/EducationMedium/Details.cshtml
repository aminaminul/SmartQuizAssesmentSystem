@model QuizSystemModel.Models.EducationMedium

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Education Medium Details";
}

<h4>Education Medium Details</h4>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>

    <dt class="col-sm-2">Approved</dt>
    <dd class="col-sm-10">@(Model.IsApproved ? "Yes" : "No")</dd>

    <dt class="col-sm-2">Created At</dt>
    <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>

    <dt class="col-sm-2">Approved At</dt>
    <dd class="col-sm-10">@Model.ApprovedAt?.ToString("g")</dd>

    <dt class="col-sm-2">Rejected At</dt>
    <dd class="col-sm-10">@Model.RejectedAt?.ToString("g")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
