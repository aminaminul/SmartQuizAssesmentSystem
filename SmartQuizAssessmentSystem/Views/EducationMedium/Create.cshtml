@using QuizSystemModel.BusinessRules
@model QuizSystemModel.Models.EducationMedium

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Education Medium";
}

<h4>Create Education Medium</h4>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label class="form-label">Education Medium</label>
        <select name="mediumEnumId"
                class="form-select"
                asp-items="ViewBag.MediumEnums">
            <option value="">Select Education Medium</option>
        </select>
        <span class="text-danger">@ViewData["MediumError"]</span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
