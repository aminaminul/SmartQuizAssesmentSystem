@using QuizSystemModel.Models
@using QuizSystemModel.BusinessRules
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Education Mediums";

    var mediums = (IEnumerable<EducationMedium>)ViewBag.Mediums;
    long? selectedMediumId = ViewBag.SelectedMediumId as long?;
    var classes = (IEnumerable<Class>)ViewBag.Classes;
}

<h4>Education Mediums</h4>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Education Medium</a>
</p>

<table class="table table-striped mb-4">
    <thead>
        <tr>
            <th>Name</th>
            <th>Approved</th>
            <th>Created At</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in mediums)
        {
            var idLong = (long)m.Id;
            <!-- enum -> long -->

            <tr>
                <td>@m.Name</td>
                <td>@(m.IsApproved ? "Yes" : "No")</td>
                <td>@m.CreatedAt.ToString("g")</td>
                <td>@m.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@idLong" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@idLong" class="btn btn-sm btn-danger">Delete</a>

                    <form asp-action="Approve" asp-route-id="@idLong" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-success">Approve</button>
                    </form>

                    <form asp-action="Reject" asp-route-id="@idLong" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-warning">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h5>Select Education Medium to view Classes</h5>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <select name="selectedMediumId" class="form-select">
                <option value=""> Select Education Medium </option>
                @foreach (var m in mediums)
                {
                    var idLong = (long)m.Id;

                    <option value="@idLong"
                            selected="@(selectedMediumId.HasValue && selectedMediumId.Value == idLong)">
                        @m.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Show Classes</button>
        </div>
    </div>
</form>

@if (selectedMediumId.HasValue)
{
    var selectedMedium = mediums.FirstOrDefault(m => (long)m.Id == selectedMediumId.Value);

    <h5>Classes under "@selectedMedium?.Name"</h5>

    @if (classes != null && classes.Any())
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Class Name</th>
                    <th>Approved</th>
                    <th>Created At</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in classes)
                {
                    <tr>
                        <td>@c.ClassName</td>
                        <td>@(c.IsApproved ? "Yes" : "No")</td>
                        <td>@c.CreatedAt.ToString("g")</td>
                        <td>@c.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Classes Found For This Education Medium.</p>
    }
}
