@model List<QuizSystemModel.Models.Student>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Students @(ViewBag.ClassName != null ? $"for Class: {ViewBag.ClassName}" : "")</h2>
    <div>
        <a asp-action="Create" class="btn btn-primary btn-sm">Add New Student</a>
    </div>
</div>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Education Medium</label>
                <select name="educationMediumId" class="form-select" asp-items="ViewBag.EducationMediumId" onchange="this.form.submit()">
                    <option value="">All Mediums</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Class</label>
                <select name="classId" class="form-select" asp-items="ViewBag.ClassId" onchange="this.form.submit()">
                    <option value="">All Classes</option>
                </select>
            </div>
            <div class="col-md-4">
                @if (ViewBag.SelectedClassId != null || ViewBag.SelectedMediumId != null)
                {
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">Clear Filters</a>
                }
            </div>
        </form>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Class</th>
            <th>Medium</th>
            <th>Approve Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.Email</td>
                <td>@student.PhoneNumber</td>
                <td>@student.Class?.Name</td>
                <td>@student.EducationMedium?.Name</td>
                <td>
                    @if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.Active)
                    {
                        <span class="badge bg-success text-white">Approved</span>
                    }
                    else if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                    {
                        <span class="badge bg-danger text-white">Rejected</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@student.Status</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@student.Id" asp-route-classId="@ViewBag.SelectedClassId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
