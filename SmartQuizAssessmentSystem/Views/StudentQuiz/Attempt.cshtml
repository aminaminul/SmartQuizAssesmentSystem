@using QuizSystemModel.Models
@model QuizAttempt

@{
    ViewData["Title"] = "Quiz Attempt";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var questions = Model.Answers
        .OrderBy(a => a.QuestionBank.Id)
        .ToList();

    var durationSeconds = Model.Quiz.Duration.HasValue
        ? (int)Model.Quiz.Duration.Value.TotalSeconds
        : 0;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <!-- Quiz Header Card -->
            <div class="card shadow-sm border-0 mb-4 overflow-hidden rounded-4">
                <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="mb-0 fw-bold">@Model.Quiz.Name</h4>
                        <small class="opacity-75"><i class="fas fa-book-open me-1"></i> @Model.Quiz.Subject</small>
                    </div>
                    @if (durationSeconds > 0)
                    {
                        <div class="bg-white bg-opacity-20 px-3 py-2 rounded-3 text-center border border-white border-opacity-25" style="min-width: 120px;">
                            <div class="text-uppercase small fw-bold opacity-75" style="font-size: 0.65rem;">Time Remaining</div>
                            <div id="timer" class="h4 mb-0 fw-bold tabular-nums">--:--</div>
                        </div>
                    }
                </div>
            </div>

            <!-- Quiz Form -->
            <form asp-controller="StudentQuiz" asp-action="Submit" method="post" id="quizForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="attemptId" value="@Model.Id" />

                @for (int i = 0; i < questions.Count; i++)
                {
                    var a = questions[i];
                    var q = a.QuestionBank;
                    string groupName = $"answers[{i}].SelectedOption";

                    <div class="card shadow-sm border-0 mb-4 rounded-4 question-card">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-bold">
                                    Question @(i + 1)
                                </span>
                                <span class="text-muted small">@q.Marks Marks</span>
                            </div>
                            
                            <h5 class="fw-bold mb-4 text-dark">@q.QuestionText</h5>

                            <input type="hidden" name="answers[@i].QuestionBankId" value="@q.Id" />
                            <input type="hidden" name="answers[@i].QuizAttemptId" value="@Model.Id" />

                            <div class="options-grid">
                                <label class="option-container">
                                    <input type="radio" name="@groupName" value="A" data-question-id="@q.Id" class="option-input" @(a.SelectedOption == "A" ? "checked" : "")>
                                    <span class="option-content">
                                        <span class="option-letter">A</span>
                                        <span class="option-text">@q.OptionA</span>
                                    </span>
                                </label>

                                <label class="option-container">
                                    <input type="radio" name="@groupName" value="B" data-question-id="@q.Id" class="option-input" @(a.SelectedOption == "B" ? "checked" : "")>
                                    <span class="option-content">
                                        <span class="option-letter">B</span>
                                        <span class="option-text">@q.OptionB</span>
                                    </span>
                                </label>

                                <label class="option-container">
                                    <input type="radio" name="@groupName" value="C" data-question-id="@q.Id" class="option-input" @(a.SelectedOption == "C" ? "checked" : "")>
                                    <span class="option-content">
                                        <span class="option-letter">C</span>
                                        <span class="option-text">@q.OptionC</span>
                                    </span>
                                </label>

                                <label class="option-container">
                                    <input type="radio" name="@groupName" value="D" data-question-id="@q.Id" class="option-input" @(a.SelectedOption == "D" ? "checked" : "")>
                                    <span class="option-content">
                                        <span class="option-letter">D</span>
                                        <span class="option-text">@q.OptionD</span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                }

                <div class="card shadow-sm border-0 rounded-4 mt-5 mb-5 overflow-hidden">
                    <div class="card-body p-4 bg-light d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i> Ensure all questions are answered before submitting.
                        </div>
                        <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm">
                            <i class="fas fa-paper-plane me-2"></i> Submit Quiz
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .options-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    @@media (max-width: 768px) {
        .options-grid {
            grid-template-columns: 1fr;
        }
    }

    .option-container {
        display: block;
        cursor: pointer;
        position: relative;
    }

    .option-container input {
        position: absolute;
        opacity: 0;
    }

    .option-content {
        display: flex;
        align-items: center;
        padding: 1rem 1.25rem;
        background: #f8fafc;
        border: 2px solid #f1f5f9;
        border-radius: 12px;
        transition: all 0.2s ease;
    }

    .option-letter {
        width: 32px;
        height: 32px;
        background: #ffffff;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        font-weight: 700;
        color: #64748b;
        flex-shrink: 0;
        transition: all 0.2s ease;
    }

    .option-text {
        font-size: 0.95rem;
        color: #475569;
        font-weight: 500;
    }

    .option-container:hover .option-content {
        background: #f1f5f9;
        border-color: #e2e8f0;
    }

    .option-container input:checked + .option-content {
        background: rgba(255, 193, 7, 0.05);
        border-color: #ffc107;
    }

    .option-container input:checked + .option-content .option-letter {
        background: #ffc107;
        color: #000000;
        border-color: #ffc107;
    }

    .option-container input:checked + .option-content .option-text {
        color: #000000;
        font-weight: 600;
    }

    /* Tabular numbers for timer */
    .tabular-nums {
        font-variant-numeric: tabular-nums;
    }

    .question-card {
        transition: transform 0.2s ease;
    }
    
    .question-card:hover {
        transform: translateX(4px);
    }
</style>

@section Scripts {
    <script>
        // Autosave Logic
        (function () {
            const attemptId = @Model.Id;

            document.querySelectorAll('.option-input').forEach(input => {
                input.addEventListener('change', function () {
                    const questionId = this.getAttribute('data-question-id');
                    const selectedOption = this.value;

                    // Small visual feedback or highlight
                    const card = this.closest('.question-card');
                    card.style.borderLeft = '4px solid #ffc107';

                    fetch('@Url.Action("Autosave", "StudentQuiz")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: `attemptId=${attemptId}&questionId=${questionId}&selectedOption=${selectedOption}`
                    }).then(response => {
                        if (response.ok) {
                            setTimeout(() => {
                                card.style.borderLeft = '0';
                            }, 500);
                        }
                    });
                });
            });
        })();

        // Timer Logic
        (function () {
            const totalSeconds = @durationSeconds;
            if (!totalSeconds || totalSeconds <= 0) return;

            // Use UTC to avoid timezone issues with JS Date
            const start = new Date('@Model.StartAt.ToUniversalTime().ToString("o")');
            const end = new Date(start.getTime() + totalSeconds * 1000);

            function updateTimer() {
                const now = new Date();
                let remaining = Math.floor((end - now) / 1000);
                
                if (remaining <= 0) {
                    document.getElementById('timer').innerText = '00:00';
                    document.getElementById('timer').classList.add('text-danger');
                    // Alert user then submit
                    alert('Time is up! Your answers will be submitted automatically.');
                    document.getElementById('quizForm').submit();
                    return;
                }

                const m = Math.floor(remaining / 60);
                const s = remaining % 60;
                const timerDisplay = document.getElementById('timer');
                
                timerDisplay.innerText = `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;

                // Warning colors for last minute
                if (remaining < 60) {
                    timerDisplay.classList.add('text-warning');
                    if (remaining < 10) {
                        timerDisplay.classList.remove('text-warning');
                        timerDisplay.classList.add('text-danger');
                    }
                }
            }

            updateTimer();
            setInterval(updateTimer, 1000);
        })();
    </script>
}
