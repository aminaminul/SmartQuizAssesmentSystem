@using QuizSystemModel.Models
@model QuizAttempt

@{
    ViewData["Title"] = "Quiz Result";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var scorePercentage = (double)Model.TotalScore / (double)Model.Quiz.TotalMarks * 100;
    var statusClass = Model.IsPassed ? "success" : "danger";
    var statusIcon = Model.IsPassed ? "fa-check-circle" : "fa-times-circle";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header Summary Card -->
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden mb-5">
                <div class="card-body p-0">
                    <div class="bg-@statusClass p-5 text-center text-white position-relative">
                        <div class="mb-3">
                            <i class="fas @statusIcon fa-5x opacity-50"></i>
                        </div>
                        <h1 class="display-5 fw-bold mb-1">@(Model.IsPassed ? "Congratulations!" : "Keep Practicing!")</h1>
                        <p class="lead opacity-75">You have completed the <span class="fw-bold">@Model.Quiz.Name</span></p>
                        
                        <div class="mt-4 pt-3 border-top border-white border-opacity-10 d-flex justify-content-around">
                            <div>
                                <div class="h3 mb-0 fw-bold">@Model.TotalScore / @Model.Quiz.TotalMarks</div>
                                <div class="small text-uppercase opacity-75">Total Score</div>
                            </div>
                            <div>
                                <div class="h3 mb-0 fw-bold">@Math.Round(scorePercentage, 1)%</div>
                                <div class="small text-uppercase opacity-75">Percentage</div>
                            </div>
                            <div>
                                <div class="h3 mb-0 fw-bold">@(Model.IsPassed ? "Pass" : "Fail")</div>
                                <div class="small text-uppercase opacity-75">Result</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="p-4 bg-white">
                        <div class="row text-center g-4">
                            <div class="col-md-6 border-end">
                                <div class="text-muted small text-uppercase fw-bold mb-1">Started At</div>
                                <div class="fw-bold">@Model.StartAt.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")</div>
                            </div>
                            <div class="col-md-6">
                                <div class="text-muted small text-uppercase fw-bold mb-1">Submitted At</div>
                                <div class="fw-bold">@Model.EndAt?.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Review Section -->
            <div class="d-flex align-items-center mb-4">
                <div class="h4 mb-0 fw-bold">Detailed Review</div>
                <div class="ms-auto">
                    <span class="badge bg-success-subtle text-success border border-success-subtle me-2"><i class="fas fa-check me-1"></i> Correct</span>
                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle"><i class="fas fa-times me-1"></i> Wrong</span>
                </div>
            </div>

            @foreach (var a in Model.Answers.OrderBy(x => x.QuestionBank.Id))
            {
                var q = a.QuestionBank;
                bool isCorrect = a.SelectedOption == q.RightOption;
                string borderClass = isCorrect ? "border-success" : "border-danger";

                <div class="card shadow-sm border-0 border-start border-4 @borderClass mb-4 rounded-4">
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between mb-3">
                            <h6 class="fw-bold text-dark mb-0">@q.QuestionText</h6>
                            @if (isCorrect)
                            {
                                <span class="text-success fw-bold"><i class="fas fa-check-circle me-1"></i> Correct</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold"><i class="fas fa-times-circle me-1"></i> Incorrect</span>
                            }
                        </div>

                        <div class="list-group list-group-flush">
                            @foreach (var option in new[] { "A", "B", "C", "D" })
                            {
                                string optionText = option switch { "A" => q.OptionA, "B" => q.OptionB, "C" => q.OptionC, "D" => q.OptionD, _ => "" };
                                bool isUserChoice = a.SelectedOption == option;
                                bool isCorrectAnswer = q.RightOption == option;
                                
                                <div class="list-group-item border-0 px-0 py-2 d-flex align-items-center">
                                    <div class="option-pill me-3 @(isCorrectAnswer ? "bg-success text-white" : (isUserChoice ? "bg-danger text-white" : "bg-light text-muted"))">
                                        @option
                                    </div>
                                    <span class="@(isCorrectAnswer ? "fw-bold text-success" : (isUserChoice ? "fw-bold text-danger" : "text-muted"))">
                                        @optionText
                                    </span>
                                    @if (isCorrectAnswer)
                                    {
                                        <i class="fas fa-check-circle text-success ms-auto" title="Correct Answer"></i>
                                    }
                                    else if (isUserChoice)
                                    {
                                        <i class="fas fa-user ms-auto text-danger" title="Your choice"></i>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Bottom Actions -->
            <div class="text-center mt-5">
                <a asp-controller="StudentDashboard" asp-action="Dashboard" class="btn btn-primary px-5 py-2 rounded-pill shadow-sm fw-bold">
                    <i class="fas fa-home me-2"></i> Back to Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .option-pill {
        width: 30px;
        height: 30px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.85rem;
        flex-shrink: 0;
    }
    
    .bg-success-subtle { background-color: #d1e7dd; }
    .bg-danger-subtle { background-color: #f8d7da; }
    .text-success { color: #0f5132 !important; }
    .text-danger { color: #842029 !important; }
    
    .card {
        transition: transform 0.2s ease;
    }
    .card:hover {
        transform: translateY(-2px);
    }
</style>