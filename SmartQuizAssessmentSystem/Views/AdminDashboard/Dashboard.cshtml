@using QuizSystemModel.ViewModels
@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Dashboard</h2>


<div class="row mb-4">
    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Instructors</h5>
                <p class="card-text display-6 mb-2">@Model.TotalInstructors</p>
                <p class="card-text mb-3">
                    Manage instructors and their active quizzes.
                </p>
                <a asp-controller="Instructor"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Students</h5>
                <p class="card-text display-6 mb-2">@Model.TotalStudents</p>
                <p class="card-text mb-3">
                    Create, update and manage student accounts with active quizzes.
                </p>
                <a asp-controller="Student"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Education Mediums</h5>
                <p class="card-text display-6 mb-2">@Model.TotalEducationMediums</p>
                <p class="card-text mb-3">
                    Manage education mediums for instructors and students.
                </p>
                <a asp-controller="EducationMedium"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>
</div>


<div class="row mb-4">
    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Classes</h5>
                <p class="card-text display-6 mb-2">@Model.TotalClasses</p>
                <p class="card-text mb-3">
                    Assign classes and link them with active quizzes.
                </p>
                <a asp-controller="Class"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Subjects</h5>
                <p class="card-text display-6 mb-2">@Model.TotalSubjects</p>
                <p class="card-text mb-3">
                    Manage subjects used across quizzes and questions.
                </p>
                <a asp-controller="Subject"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>

    
    <div class="col-md-4 d-flex">
        <div class="card text-white bg-dark mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Quiz</h5>
                <p class="card-text display-6 mb-2">@Model.TotalQuizzes</p>
                <p class="card-text mb-3">
                    Create, edit and manage quizzes before attempts.
                </p>
                <a asp-controller="Quiz"
                   asp-action="Index"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View More
                </a>
            </div>
        </div>
    </div>
</div>

<hr class="my-5" />

<h2 class="mb-4">Pending Approvals</h2>

<div class="row mb-4">
    @* Pending Instructors *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Pending Instructors</h5>
                <p class="card-text display-6 mb-2">@Model.PendingInstructors</p>
                <p class="card-text mb-3 small">
                    New instructor registrations and rejected profiles awaiting review.
                </p>
                <a asp-controller="Instructor"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>

    @* Pending Quizzes *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Pending Quizzes</h5>
                <p class="card-text display-6 mb-2">@Model.PendingQuizzes</p>
                <p class="card-text mb-3 small">
                    New quizzes submitted for review and rejected quizzes.
                </p>
                <a asp-controller="Quiz"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>

    @* Pending Education Mediums *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Pending Edu Mediums</h5>
                <p class="card-text display-6 mb-2">@Model.PendingEducationMediums</p>
                <p class="card-text mb-3 small">
                    New education mediums and rejected requests.
                </p>
                <a asp-controller="EducationMedium"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mb-5">
    @* Pending Classes *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Pending Classes</h5>
                <p class="card-text display-6 mb-2">@Model.PendingClasses</p>
                <p class="card-text mb-3 small">
                    New classes and rejected class assignments.
                </p>
                <a asp-controller="Class"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>

    @* Pending Subjects *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Pending Subjects</h5>
                <p class="card-text display-6 mb-2">@Model.PendingSubjects</p>
                <p class="card-text mb-3 small">
                    New subjects and rejected subject requests.
                </p>
                <a asp-controller="Subject"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>

    @* Pending Profile Updates *@
    <div class="col-md-4 d-flex mb-4">
        <div class="card text-white bg-dark shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Profile Updates</h5>
                <p class="card-text display-6 mb-2">@Model.PendingProfileUpdates</p>
                <p class="card-text mb-3 small">
                    User profile change requests and rejected updates.
                </p>
                <a asp-controller="ProfileApproval"
                   asp-action="Pending"
                   class="btn btn-light btn-sm mt-auto w-100">
                    Manage Approvals
                </a>
            </div>
        </div>
    </div>
</div>
</div>
