@model QuizSystemModel.ViewModels.ChangePasswordViewModel

@{
    ViewData["Title"] = "Update Password - Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="d-inline-block bg-warning bg-opacity-10 text-warning px-4 py-2 rounded-pill fw-bold mb-3 shadow-sm">
                    <i class="fas fa-key me-2"></i> Security Preference
                </div>
                <h1 class="display-6 fw-bold text-dark">Change Password</h1>
                <p class="text-muted lead">Ensure your administrative account stays secure with a strong password.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header bg-warning py-3">
                    <h5 class="mb-0 text-dark fw-bold text-center"><i class="fas fa-shield-alt me-2"></i> Update Credentials</h5>
                </div>
                <div class="card-body p-5 bg-white">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row g-4">
                            <!-- Email (Read Only) -->
                            <div class="col-12">
                                <label asp-for="Email" class="form-label fw-bold text-muted small text-uppercase mb-1"></label>
                                <div class="input-group border rounded-3 overflow-hidden bg-light">
                                    <span class="input-group-text bg-transparent border-0"><i class="fas fa-envelope opacity-50"></i></span>
                                    <input asp-for="Email" class="form-control border-0 py-2 bg-transparent" readonly />
                                </div>
                            </div>

                            <!-- Current Password -->
                            <div class="col-12">
                                <label asp-for="CurrentPassword" class="form-label fw-bold"></label>
                                <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-lock text-muted opacity-50"></i></span>
                                    <input asp-for="CurrentPassword" class="form-control border-0 py-2" placeholder="Your current password" />
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- New Password -->
                            <div class="col-12">
                                <label asp-for="NewPassword" class="form-label fw-bold"></label>
                                <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-plus-circle text-muted opacity-50"></i></span>
                                    <input asp-for="NewPassword" class="form-control border-0 py-2" placeholder="Enter new password" />
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="col-12">
                                <label asp-for="ConfirmNewPassword" class="form-label fw-bold"></label>
                                <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                    <span class="input-group-text bg-white border-0"><i class="fas fa-check-double text-muted opacity-50"></i></span>
                                    <input asp-for="ConfirmNewPassword" class="form-control border-0 py-2" placeholder="Confirm your new password" />
                                </div>
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <!-- Actions -->
                            <div class="col-12 mt-5">
                                <div class="d-grid gap-3">
                                    <button type="submit" class="btn btn-warning py-2 rounded-pill fw-bold shadow-sm">
                                        <i class="fas fa-save me-2"></i> Update Password
                                    </button>
                                    <a asp-action="Profile" class="btn btn-light py-2 rounded-pill border fw-bold text-muted">
                                        Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-focus {
        transition: all 0.3s ease;
    }
    .transition-focus:focus-within {
        border-color: #ffc107 !important;
        box-shadow: 0 0 10px rgba(255, 193, 7, 0.1) !important;
    }
    .form-label {
        color: #475569;
        font-size: 0.85rem;
        margin-bottom: 0.4rem;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
