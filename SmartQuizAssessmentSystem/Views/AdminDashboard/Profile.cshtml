@model QuizSystemModel.ViewModels.AdminProfileViewModel

@{
    ViewData["Title"] = "Admin Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="d-inline-block bg-warning bg-opacity-10 text-warning px-4 py-2 rounded-pill fw-bold mb-3 shadow-sm">
                    <i class="fas fa-user-shield me-2"></i> Administrative Account
                </div>
                <h1 class="display-6 fw-bold text-dark">My Profile</h1>
                <p class="text-muted lead">Manage your personal information and account settings.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Profile Header Banner (Redesigned to match Instructor/Student) -->
                <div class="bg-warning pt-5 pb-4 px-5 text-dark position-relative">
                    <div class="d-flex align-items-center position-relative" style="z-index: 2;">
                        <div class="avatar-container position-relative">
                            <div class="avatar-large bg-white text-warning rounded-4 d-flex align-items-center justify-content-center border border-4 border-white border-opacity-25 shadow" style="width: 100px; height: 100px;">
                                <span class="display-4 fw-bold">@Model.FirstName.FirstOrDefault()</span>
                            </div>
                            <div class="position-absolute bottom-0 end-0 bg-dark border border-white border-3 rounded-circle" style="width: 20px; height: 20px;" title="Online"></div>
                        </div>
                        <div class="ms-4">
                            <h2 class="mb-1 fw-bold">@Model.FirstName @Model.LastName</h2>
                            <div class="d-flex gap-2">
                                <span class="badge bg-dark bg-opacity-10 text-dark border border-dark border-opacity-10 rounded-pill px-3">System Administrator</span>
                                <span class="badge bg-white text-warning border-0 rounded-pill px-3 shadow-sm">
                                    <i class="fas fa-shield-alt me-1 small"></i> Full Access
                                </span>
                            </div>
                        </div>
                        <div class="ms-auto">
                            <a asp-action="ChangePassword" class="btn btn-white bg-white text-warning fw-bold px-4 rounded-pill shadow-sm hover-lift">
                                <i class="fas fa-key me-2"></i> Update Password
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 bg-white">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-5 d-flex align-items-center animate__animated animate__fadeIn">
                            <i class="fas fa-check-circle me-3 fs-4"></i>
                            <div>@TempData["SuccessMessage"]</div>
                            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Email" />

                        <div class="row g-4">
                            <div class="col-12">
                                <h6 class="text-warning text-uppercase small fw-bold mb-3 border-bottom pb-2">Identification Details</h6>
                            </div>

                            <!-- Email (Read Only Card) -->
                            <div class="col-12">
                                <div class="p-3 rounded-4 bg-light border-start border-warning border-4 shadow-sm mb-2">
                                    <label asp-for="Email" class="form-label fw-bold text-muted small text-uppercase mb-1"></label>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-envelope text-warning me-3 opacity-50 fs-5"></i>
                                        <span class="fw-bold text-dark fs-5">@Model.Email</span>
                                        <span class="ms-auto badge bg-white border text-muted fw-normal">Account Identity</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Name Fields -->
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label fw-bold"></label>
                                    <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                        <span class="input-group-text bg-white border-0"><i class="fas fa-user text-muted"></i></span>
                                        <input asp-for="FirstName" class="form-control border-0 py-2" placeholder="First Name" />
                                    </div>
                                    <span asp-validation-for="FirstName" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label fw-bold"></label>
                                    <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                        <span class="input-group-text bg-white border-0"><i class="fas fa-user text-muted"></i></span>
                                        <input asp-for="LastName" class="form-control border-0 py-2" placeholder="Last Name" />
                                    </div>
                                    <span asp-validation-for="LastName" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="col-12">
                                <div class="form-group">
                                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                                    <div class="input-group border rounded-3 overflow-hidden transition-focus">
                                        <span class="input-group-text bg-white border-0"><i class="fas fa-phone text-muted"></i></span>
                                        <input asp-for="PhoneNumber" class="form-control border-0 py-2" placeholder="+1234567890" />
                                    </div>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="col-12 mt-5">
                                <div class="d-flex gap-3 pt-4 border-top">
                                    <button type="submit" class="btn btn-warning px-5 py-2 rounded-pill fw-bold shadow-sm">
                                        <i class="fas fa-save me-2"></i> Save Profile Changes
                                    </button>
                                    <a asp-action="Dashboard" class="btn btn-light px-4 py-2 rounded-pill border fw-bold text-muted">
                                        Back to Dashboard
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Security Footer -->
            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="fas fa-info-circle me-1"></i> Changes to profile information are applied immediately across the system.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-large {
        transition: all 0.3s ease;
    }
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .transition-focus {
        transition: all 0.3s ease;
    }
    .transition-focus:focus-within {
        border-color: #ffc107 !important;
        box-shadow: 0 0 10px rgba(255, 193, 7, 0.1) !important;
    }
    .form-label {
        color: #475569;
        font-size: 0.85rem;
        margin-bottom: 0.4rem;
    }
    .btn-white:hover {
        background: #f8f9fa !important;
        color: #856404 !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
