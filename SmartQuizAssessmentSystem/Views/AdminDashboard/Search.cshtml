@model QuizSystemModel.ViewModels.GlobalSearchViewModel

@{
    ViewData["Title"] = "Search Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-1">
                    <li class="breadcrumb-item"><a asp-controller="AdminDashboard" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Search</li>
                </ol>
            </nav>
            <h3 class="fw-bold mb-0">Search Results</h3>
            <p class="text-muted">Found matches for <span class="text-primary fw-bold">"@Model.Query"</span></p>
        </div>
        <div class="text-end">
            <span class="badge bg-light text-dark border p-2">
                <i class="fas fa-filter me-1 text-muted"></i> All Categories
            </span>
        </div>
    </div>

    @if (!Model.Instructors.Any() && !Model.Students.Any() && !Model.Quizzes.Any() && !Model.Subjects.Any())
    {
        <div class="card border-0 shadow-sm text-center py-5">
            <div class="card-body">
                <div class="mb-4">
                    <i class="fas fa-search-minus fa-4x text-light"></i>
                </div>
                <h4 class="text-dark">No matches found</h4>
                <p class="text-muted">We couldn't find anything matching your search term. <br />Try different keywords or check for typos.</p>
                <a asp-action="Dashboard" class="btn btn-primary px-4 mt-2 shadow-sm">Back to Dashboard</a>
            </div>
        </div>
    }
    else
    {
        <div class="row g-4">
            @if (Model.Instructors.Any())
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm overflow-hidden">
                        <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                            <i class="fas fa-chalkboard-teacher text-primary me-2"></i>
                            <h5 class="mb-0 fw-bold">Instructors (@Model.Instructors.Count())</h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Name</th>
                                        <th>Email</th>
                                        <th>Status</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var i in Model.Instructors)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-medium text-dark">@i.FirstName @i.LastName</td>
                                            <td class="text-muted">@i.Email</td>
                                            <td>
                                                <span class="badge @(i.Status == QuizSystemModel.BusinessRules.ModelStatus.Active ? "bg-success-subtle text-success border border-success-subtle" : "bg-warning-subtle text-warning border border-warning-subtle") px-2">
                                                    @i.Status
                                                </span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Instructor" asp-action="Details" asp-route-id="@i.Id" class="btn btn-sm btn-light border shadow-sm">
                                                    <i class="fas fa-eye me-1 opacity-50"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Students.Any())
            {
                <div class="col-12">
                    <div class="card border-0 shadow-sm overflow-hidden">
                        <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                            <i class="fas fa-user-graduate text-success me-2"></i>
                            <h5 class="mb-0 fw-bold">Students (@Model.Students.Count())</h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Name</th>
                                        <th>Email</th>
                                        <th>Class</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model.Students)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-medium text-dark">@s.FirstName @s.LastName</td>
                                            <td class="text-muted">@s.Email</td>
                                            <td>@s.Class?.Name</td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Student" asp-action="Details" asp-route-id="@s.Id" class="btn btn-sm btn-light border shadow-sm">
                                                    <i class="fas fa-eye me-1 opacity-50"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Quizzes.Any())
            {
                <div class="col-6">
                    <div class="card border-0 shadow-sm h-100 overflow-hidden">
                        <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                            <i class="fas fa-tasks text-warning me-2"></i>
                            <h5 class="mb-0 fw-bold">Quizzes (@Model.Quizzes.Count())</h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Quiz Name</th>
                                        <th>Marks</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var q in Model.Quizzes)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-medium text-dark">@q.Name</td>
                                            <td>@q.TotalMarks</td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Quiz" asp-action="Details" asp-route-id="@q.Id" class="btn btn-sm btn-light border shadow-sm">
                                                    <i class="fas fa-eye me-1 opacity-50"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }

            @if (Model.Subjects.Any())
            {
                <div class="col-6">
                    <div class="card border-0 shadow-sm h-100 overflow-hidden">
                        <div class="card-header bg-white border-0 py-3 d-flex align-items-center">
                            <i class="fas fa-book-open text-info me-2"></i>
                            <h5 class="mb-0 fw-bold">Subjects (@Model.Subjects.Count())</h5>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Subject Name</th>
                                        <th class="text-end pe-4">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var sub in Model.Subjects)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-medium text-dark">@sub.Name</td>
                                            <td class="text-end pe-4">
                                                <a asp-controller="Subject" asp-action="Details" asp-route-id="@sub.Id" class="btn btn-sm btn-light border shadow-sm">
                                                    <i class="fas fa-eye me-1 opacity-50"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .bg-success-subtle { background-color: #d1e7dd; }
    .bg-warning-subtle { background-color: #fff3cd; }
    .text-success { color: #0f5132 !important; }
    .text-warning { color: #664d03 !important; }
</style>
