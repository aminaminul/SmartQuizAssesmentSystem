@using QuizSystemModel.Models
@model IEnumerable<ProfileUpdateRequest>

@{
    ViewData["Title"] = "Pending Profile Updates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>Pending Profile Updates</h4>
        <a asp-controller="AdminDashboard" asp-action="Dashboard" class="btn btn-outline-secondary btn-sm">
            <i class="fas fa-arrow-left me-1"></i> Dashboard
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="fas fa-user-check fa-3x text-muted mb-3"></i>
                <p class="text-muted mb-0">No pending profile update requests found.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>User ID</th>
                            <th>Role</th>
                            <th>Requested At</th>
                            <th>Admin Comment</th>
                            <th>Status</th>
                            <th class="text-end" style="min-width: 250px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model)
                        {
                            <tr>
                                <td><span class="font-monospace">@r.UserId</span></td>
                                <td><span class="badge bg-info text-dark">@r.Role</span></td>
                                <td>@r.RequestedAt.ToLocalTime().ToString("g")</td>
                                <td>@(r.AdminComment ?? "-")</td>
                                <td>
                                    @if (r.Status == QuizSystemModel.BusinessRules.ProfileUpdateStatus.Approved)
                                    {
                                        <span class="badge bg-success">Approved</span>
                                    }
                                    else if (r.Status == QuizSystemModel.BusinessRules.ProfileUpdateStatus.Pending)
                                    {
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    }
                                    else if (r.Status == QuizSystemModel.BusinessRules.ProfileUpdateStatus.Rejected)
                                    {
                                        <span class="badge bg-danger">Rejected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@r.Status</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end gap-2 align-items-center">
                                        <form asp-controller="ProfileApproval" asp-action="Approve" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-check me-1"></i> Approve
                                            </button>
                                        </form>

                                        <form asp-controller="ProfileApproval" asp-action="Reject" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@r.Id" />
                                            <div class="input-group input-group-sm">
                                                <input type="text" name="comment" class="form-control" placeholder="Reason" style="width: 100px;">
                                                <button type="submit" class="btn btn-outline-danger">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
