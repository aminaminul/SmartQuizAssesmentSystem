@using QuizSystemModel.ViewModels
@model StudentProfileUpdateViewModel

@{
    ViewData["Title"] = "Student Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <!-- Header Section -->
            <div class="text-center mb-5">
                <div class="d-inline-block bg-success bg-opacity-10 text-success px-4 py-2 rounded-pill fw-bold mb-3 shadow-sm">
                    <i class="fas fa-user-graduate me-2"></i> Active Student
                </div>
                <h1 class="display-6 fw-bold text-dark">My Profile</h1>
                <p class="text-muted lead">View your enrollment details and personal identification info.</p>
            </div>

            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <!-- Profile Header Banner -->
                <div class="bg-success pt-5 pb-4 px-5 text-white position-relative">
                    <div class="d-flex align-items-center position-relative" style="z-index: 2;">
                        <div class="avatar-container position-relative">
                            <div class="avatar-large bg-white text-success rounded-4 d-flex align-items-center justify-content-center border border-4 border-white border-opacity-25 shadow" style="width: 100px; height: 100px;">
                                <span class="display-4 fw-bold">@Model.FirstName.FirstOrDefault()</span>
                            </div>
                            <div class="position-absolute bottom-0 end-0 bg-white border border-success border-3 rounded-circle d-flex align-items-center justify-content-center" style="width: 28px; height: 28px;">
                                <i class="fas fa-check text-success small" style="font-size: 10px;"></i>
                            </div>
                        </div>
                        <div class="ms-4">
                            <h2 class="mb-1 fw-bold">@Model.FirstName @Model.LastName</h2>
                            <div class="d-flex gap-2">
                                <span class="badge bg-white text-success border-0 rounded-pill px-3">Student</span>
                                <span class="badge bg-light text-dark border-0 rounded-pill px-3">
                                    <i class="fas fa-graduation-cap me-1 small"></i> @Model.ClassName
                                </span>
                            </div>
                        </div>
                        <div class="ms-auto">
                            <a asp-action="UpdateProfile" class="btn btn-white bg-white text-success fw-bold px-4 rounded-pill shadow-sm hover-lift">
                                <i class="fas fa-edit me-2"></i> Update Profile
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5 bg-white">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 shadow-sm rounded-3 mb-5 d-flex align-items-center">
                            <i class="fas fa-check-circle me-3 fs-4"></i>
                            <div>@TempData["SuccessMessage"]</div>
                            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row g-5">
                        <!-- Left Column: Personal info -->
                        <div class="col-md-6 border-end border-light">
                            <div class="section-title-box mb-4">
                                <h5 class="fw-bold text-dark d-flex align-items-center">
                                    <i class="fas fa-id-card text-success me-2"></i> Identity Details
                                </h5>
                                <div class="title-line"></div>
                            </div>
                            
                            <div class="info-item mb-4">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Email Address</label>
                                <div class="p-3 bg-light rounded-3 d-flex align-items-center">
                                    <i class="fas fa-envelope text-success me-3 opacity-50"></i>
                                    <span class="fw-bold text-dark">@Model.Email</span>
                                </div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Contact Phone</label>
                                <div class="p-3 bg-light rounded-3 d-flex align-items-center">
                                    <i class="fas fa-phone text-success me-3 opacity-50"></i>
                                    <span class="fw-bold text-dark">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "Not Provided" : Model.PhoneNumber)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Right Column: Academic info -->
                        <div class="col-md-6">
                            <div class="section-title-box mb-4">
                                <h5 class="fw-bold text-dark d-flex align-items-center">
                                    <i class="fas fa-university text-primary me-2"></i> Enrollment Info
                                </h5>
                                <div class="title-line bg-primary"></div>
                            </div>

                            <div class="info-item mb-4">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Education Medium</label>
                                <div class="p-3 border rounded-3 d-flex align-items-center">
                                    <i class="fas fa-globe text-primary me-3 opacity-50"></i>
                                    <span class="fw-bold text-dark">@Model.EducationMediumName</span>
                                </div>
                            </div>

                            <div class="info-item mb-0">
                                <label class="text-muted small text-uppercase fw-bold d-block mb-1">Assigned Class</label>
                                <div class="p-4 bg-primary bg-opacity-10 rounded-3 d-flex align-items-center border border-primary border-opacity-10">
                                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                        <i class="fas fa-users fa-lg"></i>
                                    </div>
                                    <div>
                                        <span class="fw-bold text-primary d-block fs-5">@Model.ClassName</span>
                                        <span class="text-muted small">Standard Learning Group</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer Summary Content -->
                <div class="card-footer bg-light border-0 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="text-muted small">
                            <i class="fas fa-info-circle me-1"></i> Changes to critical academic data may require Admin approval.
                        </div>
                        <a asp-controller="StudentDashboard" asp-action="ChangePassword" class="btn btn-outline-secondary rounded-pill px-4 fw-bold shadow-sm">
                            <i class="fas fa-lock me-2"></i> Password Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-large {
        transition: all 0.3s ease;
    }
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .hover-lift:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
    .title-line {
        height: 3px;
        width: 40px;
        background: #198754;
        margin-top: 5px;
        border-radius: 2px;
    }
    .info-item {
        transition: all 0.2s ease;
    }
    .info-item:hover {
        transform: scale(1.01);
    }
    .btn-white:hover {
        background: #f8f9fa !important;
        color: #198754 !important;
    }
</style>