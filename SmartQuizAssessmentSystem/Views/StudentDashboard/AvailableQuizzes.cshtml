@using QuizSystemModel.Models
@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Available Quizzes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Available Quizzes</h2>

@if (!Model.Any())
{
    <p>No quizzes available right now.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Quiz</th>
                <th>Subject</th>
                <th>Duration</th>
                <th>Marks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model)
            {
                <tr>
                    <td>@quiz.Name</td>
                    <td>@quiz.Subject</td>
                    <td>
                        @(quiz.Duration.HasValue ? $"{quiz.Duration.Value.TotalMinutes} min" : "-")
                    </td>
                    <td>@quiz.TotalMarks</td>
                    <td>
                        <form asp-controller="StudentDashboard"
                              asp-action="StartQuiz"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="quizId" value="@quiz.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                Start
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-controller="StudentDashboard" asp-action="Dashboard" class="btn btn-secondary"> Back to Dashboard</a>
