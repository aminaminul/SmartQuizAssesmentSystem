@using QuizSystemModel.ViewModels
@model StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome, @Model.StudentName</h2>

<div class="row mb-4">
    <div class="col-md-3 d-flex">
        <div class="card text-white bg-primary mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Available Quizzes</h5>
                <p class="card-text display-6 mb-3">@Model.TotalQuizzesAvailable</p>
                <a asp-controller="StudentDashboard"
                   asp-action="AvailableQuizzes"
                   class="btn btn-light btn-sm mt-auto w-100">
                    View Quizzes
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-3 d-flex">
        <div class="card text-white bg-success mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Completed Quizzes</h5>
                <p class="card-text display-6 mb-0">@Model.TotalQuizzesCompleted</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 d-flex">
        <div class="card text-white bg-info mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Average Score</h5>
                <p class="card-text display-6 mb-0">@Model.AverageScore</p>
            </div>
        </div>
    </div>

    <div class="col-md-3 d-flex">
        <div class="card text-white bg-secondary mb-3 shadow-sm w-100 h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-2">Quiz Attempts</h5>
                <p class="card-text mb-3">
                    Last @Model.RecentAttempts.Count attempt(s)
                </p>
                <div class="mt-auto d-grid gap-2">
                    <a asp-controller="StudentDashboard" asp-action="RecentAttempts" class="btn btn-light btn-sm"> View Recent </a>
                    <a asp-controller="StudentDashboard" asp-action="AllAttempts" class="btn btn-outline-light btn-sm"> View All </a>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
