@using QuizSystemModel.ViewModels
@model StudentDashboardViewModel

@{
    ViewData["Title"] = "Student Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Welcome, @Model.StudentName</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Available Quizzes</h5>
                <p class="card-text display-6">@Model.TotalQuizzesAvailable</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Completed Quizzes</h5>
                <p class="card-text display-6">@Model.TotalQuizzesCompleted</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Average Score</h5>
                <p class="card-text display-6">@Model.AverageScore</p>
            </div>
        </div>
    </div>
</div>

<hr />

<h3>Attempt a Quiz</h3>

@if (!Model.AvailableQuizzes.Any())
{
    <p>No quizzes available right now.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Quiz</th>
                <th>Subject</th>
                <th>Duration</th>
                <th>Marks</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var quiz in Model.AvailableQuizzes)
            {
                <tr>
                    <td>@quiz.Name</td>
                    <td>@quiz.Subject</td>
                    <td>
                        @(quiz.Duration.HasValue ? $"{quiz.Duration.Value.TotalMinutes} min" : "-")
                    </td>
                    <td>@quiz.TotalMarks</td>
                    <td>
                        <form asp-controller="StudentDashboard"
                              asp-action="StartQuiz"
                              method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="quizId" value="@quiz.Id" />
                            <button type="submit" class="btn btn-primary btn-sm">
                                Start
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<hr />

<h3>Recent Attempts</h3>

@if (!Model.RecentAttempts.Any())
{
    <p>No attempts yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Quiz</th>
                <th>Started</th>
                <th>Submitted</th>
                <th>Score</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model.RecentAttempts)
            {
                <tr>
                    <td>@a.Quiz.Name</td>
                    <td>@a.StartAt.ToLocalTime()</td>
                    <td>@(a.EndAt.HasValue? a.EndAt.Value.ToLocalTime().ToString() : "-")</td>
                    <td>@a.TotalScore</td>
                    <td>@(a.IsSubmitted ? (a.IsPassed ? "Passed" : "Failed") : "In Progress")</td>
                </tr>
            }
        </tbody>
    </table>
}
