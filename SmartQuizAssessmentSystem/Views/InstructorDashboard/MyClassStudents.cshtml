@model IEnumerable<QuizSystemModel.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Class Students";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Students for Class: @ViewBag.ClassName</h2>
    <div>
        <a asp-action="CreateStudent" class="btn btn-primary btn-sm">
            <i class="fas fa-plus"></i> Add New Student
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Status</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted italic">
                                <i class="fas fa-user-slash fa-2x mb-3 d-block"></i>
                                No students found in your assigned class.
                            </td>
                        </tr>
                    }
                    @foreach (var student in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="fw-bold text-dark">@student.FirstName @student.LastName</div>
                            </td>
                            <td>@student.Email</td>
                            <td>@student.PhoneNumber</td>
                            <td>
                                @if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.Active)
                                {
                                    <span class="badge rounded-pill bg-success-subtle text-success border border-success">Approved</span>
                                }
                                else if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.Pending)
                                {
                                    <span class="badge rounded-pill bg-warning-subtle text-warning border border-warning">Pending</span>
                                }
                                else if (student.Status == QuizSystemModel.BusinessRules.ModelStatus.InActive)
                                {
                                    <span class="badge rounded-pill bg-danger-subtle text-danger border border-danger">Rejected</span>
                                }
                                else
                                {
                                    <span class="badge rounded-pill bg-secondary">@student.Status</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group gap-1">
                                    <a asp-action="MyClassStudentDetails" asp-route-id="@student.Id" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form asp-action="DeleteMyClassStudent" asp-route-id="@student.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to remove this student? This action cannot be undone.');">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Remove
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
