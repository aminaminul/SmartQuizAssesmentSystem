@model IEnumerable<QuizSystemModel.Models.Student>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Students";
}

<h2>All Students</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Education Medium</th>
            <th>Class</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var s in Model)
        {
            <tr>
                <td>@(s.FirstName + " " + s.LastName)</td>
                <td>@s.Email</td>
                <td>@s.PhoneNumber</td>
                <td>@s.EducationMedium?.Name</td>
                <td>@s.Class?.ClassName</td>
                <td>
                    <a asp-action="StudentDetails" asp-route-id="@s.Id" class="btn btn-sm btn-info">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
