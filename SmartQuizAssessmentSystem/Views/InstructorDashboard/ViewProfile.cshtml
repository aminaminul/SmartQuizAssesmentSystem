@using QuizSystemModel.ViewModels
@model InstructorProfileUpdateViewModel

@{
    ViewData["Title"] = "Instructor Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Profile</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">@Model.FirstName @Model.LastName</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
        <p class="card-text"><strong>HSC Institute:</strong> @Model.HscPassingInstitute</p>
        <p class="card-text"><strong>HSC Year:</strong> @Model.HscPassingYear</p>
        <p class="card-text"><strong>HSC Grade:</strong> @Model.HscGrade</p>
        <p class="card-text"><strong>Education Medium:</strong> @Model.EducationMediumId</p>
    </div>
</div>

<a asp-action="UpdateProfile" class="btn btn-primary"> Update Profile </a>
<a asp-action="ChangePassword" class="btn btn-secondary ml-2">Change Password</a>