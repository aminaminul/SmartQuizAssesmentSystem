@using QuizSystemModel.ViewModels
@model InstructorProfileUpdateViewModel

@{
    ViewData["Title"] = "Instructor Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 text-center">My Profile</h4>
                </div>
                <div class="card-body p-4">
                    
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-12 text-center mb-3">
                            <div class="avatar-circle bg-light d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 80px; height: 80px;">
                                <span class="fs-1 text-primary">@Model.FirstName.FirstOrDefault()</span>
                            </div>
                            <h3 class="mt-2">@Model.FirstName @Model.LastName</h3>
                            <span class="badge bg-info text-dark">Instructor</span>
                        </div>
                    </div>

                    <div class="row g-4">
                        <div class="col-md-6">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Personal Information</h5>
                            <div class="mb-3">
                                <label class="small text-muted fw-bold">Email</label>
                                <p class="mb-0 fs-5">@Model.Email</p>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted fw-bold">Phone</label>
                                <p class="mb-0 fs-5">@Model.PhoneNumber</p>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h5 class="text-primary border-bottom pb-2 mb-3">Academic Details</h5>
                            <div class="mb-3">
                                <label class="small text-muted fw-bold">Institute</label>
                                <p class="mb-0">@Model.HscPassingInstitute</p>
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="small text-muted fw-bold">Passing Year</label>
                                    <p class="mb-0">@Model.HscPassingYear</p>
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="small text-muted fw-bold">GPA</label>
                                    <p class="mb-0">@Model.HscGrade</p>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted fw-bold">Education Medium</label>
                                <p class="mb-0">@Model.EducationMediumName</p>
                            </div>
                            <div class="mb-3">
                                <label class="small text-muted fw-bold">Class</label>
                                <p class="mb-0">@Model.ClassName</p>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary me-md-2">Change Password</a>
                        <a asp-action="UpdateProfile" class="btn btn-primary px-4">Edit Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>