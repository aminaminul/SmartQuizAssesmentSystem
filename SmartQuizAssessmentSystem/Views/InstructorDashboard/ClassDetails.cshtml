@model QuizSystemModel.Models.Class

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Class Details";
}

<h2>Class Details</h2>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.ClassName</dd>

    <dt class="col-sm-3">Education Medium</dt>
    <dd class="col-sm-9">@Model.EducationMedium?.Name</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>

    <dt class="col-sm-3">Approved</dt>
    <dd class="col-sm-9">@((Model.IsApproved ? "Yes" : "No"))</dd>
</dl>

<a asp-action="Classes" class="btn btn-secondary">Back to Classes</a>
